---

<section class="w-full max-w-[1200px] mx-auto p-4" data-i18n={JSON.stringify(t)}>
  
  <!-- Search/Input Area -->
  <!-- Search/Input Area -->
  <div class="bg-[#18181b] border border-white/10 rounded-3xl p-2 md:p-3 flex flex-col md:flex-row items-center gap-2 md:gap-3 shadow-2xl relative z-20 transition-all hover:border-white/20">
    <div class="flex-grow w-full relative group">
      <div class="absolute inset-y-0 left-4 md:left-5 flex items-center pointer-events-none z-10">
        <Icon name="lucide:link" class="text-white/40 group-focus-within:text-primary transition-colors" width={20} />
      </div>
      <input 
        type="url" 
        id="videoUrl" 
        class="w-full bg-[#0a0a0a] md:bg-[#27272a] border border-white/5 md:border-transparent focus:border-primary/50 text-white placeholder:text-white/30 rounded-2xl md:rounded-xl py-3.5 md:py-4 pl-12 pr-12 md:pr-14 outline-none transition-all font-medium text-sm md:text-base [appearance:none] [-webkit-appearance:none]"
        placeholder={t.placeholder}
        autocomplete="off"
      >
      <!-- Social Icon Preview -->
      <div id="socialIconPreview" class="absolute inset-y-0 right-3 md:right-4 flex items-center gap-2 pointer-events-none transition-all duration-300 opacity-0 translate-x-2">
         <!-- Icon injected via JS -->
      </div>
    </div>

    <button 
      id="submitBtn"
      class="w-full md:w-auto px-6 md:px-8 py-3.5 md:py-4 bg-gradient-to-r from-[#f97316] to-[#ea580c] hover:from-[#ea580c] hover:to-[#c2410c] text-white font-bold rounded-2xl md:rounded-xl flex items-center justify-center gap-2 transition-all active:scale-[0.98] disabled:opacity-50 disabled:grayscale disabled:cursor-not-allowed shadow-[0_4px_20px_rgba(249,115,22,0.25)] hover:shadow-[0_8px_30px_rgba(249,115,22,0.4)]"
    >
      <span class="btn-text flex items-center gap-2">
        <Icon name="lucide:search" width={20} stroke-width={2.5} />
        <span class="uppercase tracking-wide text-sm md:text-base">{t.search}</span>
      </span>
      <span class="btn-loading hidden">
        <Icon name="lucide:loader-2" class="animate-spin" width={22} />
      </span>
    </button>
  </div>

  <form data-api-url={apiUrl} class="hidden"></form>

  <!-- Turnstile Container -->
  <div class="mt-4 flex justify-center" id="turnstile-container">
    <div 
      class="cf-turnstile" 
      data-sitekey={turnstileSiteKey}
      data-callback="onTurnstileSuccess"
      data-theme="dark"
      data-appearance="always"
      data-retry="auto"
      data-retry-interval="3000"
    ></div>
  </div>

  <!-- Results/Status Area -->
  <div id="statusCard" class="mt-8 hidden animate-in fade-in slide-in-from-bottom-4 duration-500">
    
    <!-- Info Card -->
    <div class="bg-[#18181b] border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
      <div class="p-6 md:p-8 flex flex-col md:flex-row gap-6 md:gap-8">
        
        <!-- Thumbnail -->
        <div class="shrink-0 w-full md:w-64 aspect-video bg-[#27272a] rounded-xl overflow-hidden relative shadow-lg group">
           <img id="videoThumb" src="" alt="" class="w-full h-full object-cover hidden opacity-0 transition-opacity duration-700" onload="this.classList.remove('opacity-0')">
           <div id="thumbPlaceholder" class="absolute inset-0 flex items-center justify-center text-white/10">
              <Icon name="lucide:image" width={48} />
           </div>
           <!-- Provider Badge on Thumb -->
           <div id="providerBadge" class="absolute top-3 left-3 px-2 py-1 bg-black/80 backdrop-blur-md rounded-md text-[10px] uppercase font-bold text-white hidden items-center gap-1.5 border border-white/10">
               <!-- Icon & Text injected via JS -->
           </div>
        </div>

        <!-- Details & Options -->
        <div class="flex-grow flex flex-col justify-between">
          <div class="space-y-3">
             <div class="flex items-start justify-between gap-4">
               <div>
                  <h3 id="videoTitle" class="text-xl md:text-2xl font-bold text-white leading-tight line-clamp-2">{t.searching}</h3>
                  <p id="videoMeta" class="text-white/40 text-sm mt-1 font-mono flex items-center gap-2">
                     <span class="w-4 h-4 rounded-full bg-white/10 animate-pulse"></span> {t.waiting_metadata}
                  </p>
               </div>
             </div>
          </div>

          <!-- Dummy Options (Visual Only for now, as user backend defines logic) -->
          <div class="mt-6 p-4 bg-[#27272a]/50 rounded-xl border border-white/5 grid grid-cols-1 md:grid-cols-3 gap-4">
             <div class="space-y-1">
               <label class="text-[10px] uppercase font-bold text-white/30 tracking-wider">{t.format}</label>
               <div class="flex bg-[#18181b] p-1 rounded-lg border border-white/5">
                 <button class="flex-1 py-1.5 text-xs font-bold rounded-md bg-[#27272a] text-white shadow-sm">MP4</button>
                 <button class="flex-1 py-1.5 text-xs font-bold rounded-md text-white/40 hover:text-white transition-colors">MP3</button>
               </div>
             </div>
             
             <div class="space-y-1">
               <label class="text-[10px] uppercase font-bold text-white/30 tracking-wider">{t.quality}</label>
               <div class="relative">
                  <select disabled class="w-full bg-[#18181b] text-white/70 text-xs font-bold py-2.5 px-3 rounded-lg border border-white/5 appearance-none opacity-50 cursor-not-allowed">
                     <option>{t.best_available}</option>
                  </select>
                  <Icon name="lucide:chevron-down" class="absolute right-3 top-1/2 -translate-y-1/2 text-white/20" width={14} />
               </div>
             </div>

             <div class="space-y-1">
                <label class="text-[10px] uppercase font-bold text-white/30 tracking-wider">{t.status_label}</label>
                <div id="statusBadge" class="py-2 px-3 rounded-lg text-xs font-bold text-center border bg-yellow-500/10 text-yellow-500 border-yellow-500/20">
                   {t.waiting}
                </div>
             </div>
          </div>
        </div>
      </div>

      <!-- Action Footer -->
      <div class="px-6 md:px-8 pb-6 md:pb-8 pt-0">
          
          <!-- Progress Bar -->
          <div id="progressContainer" class="mb-4 space-y-2">
            <div class="flex justify-between text-xs font-mono text-white/50">
               <span id="progressStatusText">{t.starting}</span>
               <span id="progressPercent">0%</span>
            </div>
            <div class="h-2 bg-[#27272a] rounded-full overflow-hidden">
               <div id="progressFill" class="h-full bg-gradient-to-r from-[#22c55e] to-[#10b981] w-0 transition-all duration-300 shadow-[0_0_15px_rgba(34,197,94,0.4)]"></div>
            </div>
          </div>

          <!-- Download Button -->
          <a 
            id="downloadLink" 
            href="#" 
            target="_blank"
            class="hidden w-full py-4 bg-[#22c55e] hover:bg-[#16a34a] text-white font-black text-center uppercase tracking-wider rounded-xl shadow-[0_0_25px_rgba(34,197,94,0.3)] hover:shadow-[0_0_40px_rgba(34,197,94,0.5)] transition-all transform hover:-translate-y-0.5 active:translate-y-0 flex items-center justify-center gap-3"
          >
            <Icon name="lucide:download" width={24} stroke-width={3} />
            {t.download_now}
          </a>

          <!-- Error Message -->
          <div id="errorMessage" class="hidden p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-500 text-sm font-medium flex items-center gap-3">
             <Icon name="lucide:alert-circle" width={20} />
             <span id="errorText">{t.error_occurred}</span>
          </div>

      </div>
    </div>

    <!-- History Header (Visual Only) -->
    <div class="mt-8 mb-4 flex items-center justify-between px-2">
       <h4 class="text-white/50 font-bold flex items-center gap-2">
         <Icon name="lucide:clock" width={16} /> {t.history}
       </h4>
       <button class="text-xs text-white/30 hover:text-white transition-colors">{t.clear}</button>
    </div>

    <!-- Empty History State -->
    <div class="border border-dashed border-white/5 rounded-2xl p-12 flex flex-col items-center justify-center gap-4 text-white/20">
        <Icon name="lucide:inbox" width={48} />
        <p class="text-sm">{t.no_downloads}</p>
    </div>

  </div>
</section>

<script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

<script is:inline>
  /**
   * DownKingo - Download Section Controller
   * Professional implementation with robust error handling
