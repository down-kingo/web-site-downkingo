---
import { Icon } from 'astro-icon/components';

interface Props {
  apiUrl?: string;
  turnstileSiteKey: string;
  lang?: 'pt' | 'en';
}

const { 
  apiUrl = 'http://localhost:8080/api',
  turnstileSiteKey,
  lang = 'pt'
} = Astro.props;

const translations = {
  pt: {
    placeholder: "Cole a URL do vídeo (YouTube, TikTok, Instagram...)",
    search: "Buscar",
    searching: "Buscando informações...",
    waiting_metadata: "Aguardando metadados...",
    format: "Formato",
    quality: "Qualidade",
    best_available: "Melhor disponível",
    status_label: "Status",
    waiting: "Aguardando",
    starting: "Iniciando...",
    download_now: "Baixar Agora",
    error_occurred: "Ocorreu um erro",
    history: "Histórico",
    clear: "Limpar",
    no_downloads: "Nenhum download realizado ainda",
    status_pending: "Na fila",
    status_processing: "Baixando...",
    status_done: "Pronto",
    status_error: "Erro",
    detected: "Detectado",
    error_unknown: "Erro desconhecido",
    error_failed_start: "Falha ao iniciar"
  },
  en: {
    placeholder: "Paste video URL (YouTube, TikTok, Instagram...)",
    search: "Search",
    searching: "Searching info...",
    waiting_metadata: "Waiting metadata...",
    format: "Format",
    quality: "Quality",
    best_available: "Best available",
    status_label: "Status",
    waiting: "Waiting",
    starting: "Starting...",
    download_now: "Download Now",
    error_occurred: "An error occurred",
    history: "History",
    clear: "Clear",
    no_downloads: "No downloads yet",
    status_pending: "Queued",
    status_processing: "Downloading...",
    status_done: "Ready",
    status_error: "Error",
    detected: "Detected",
    error_unknown: "Unknown error",
    error_failed_start: "Failed to start"
  }
};

const t = translations[lang];
---

<section class="w-full max-w-[1200px] mx-auto p-4" data-i18n={JSON.stringify(t)}>
  
  <!-- Search/Input Area -->
  <div class="bg-[#18181b] border border-white/10 rounded-2xl p-2 md:p-3 flex flex-col md:flex-row items-center gap-2 shadow-2xl relative z-20">
    <div class="flex-grow w-full relative group">
      <div class="absolute inset-y-0 left-4 flex items-center pointer-events-none">
        <Icon name="lucide:link" class="text-white/30 group-focus-within:text-primary transition-colors" width={20} />
      </div>
      <input 
        type="url" 
        id="videoUrl" 
        class="w-full bg-[#27272a] border border-transparent focus:border-primary/50 text-white placeholder:text-white/30 rounded-xl py-4 pl-12 pr-14 outline-none transition-all font-medium text-sm md:text-base"
        placeholder={t.placeholder}
        autocomplete="off"
      >
      <!-- Social Icon Preview -->
      <div id="socialIconPreview" class="absolute inset-y-0 right-4 flex items-center gap-2 pointer-events-none transition-all duration-300 opacity-0 translate-x-2">
         <!-- Icon injected via JS -->
      </div>
    </div>

    <button 
      id="submitBtn"
      class="w-full md:w-auto px-8 py-4 bg-[#f97316] hover:bg-[#ea580c] text-white font-bold rounded-xl flex items-center justify-center gap-2 transition-all active:scale-95 disabled:opacity-50 disabled:grayscale disabled:cursor-not-allowed shadow-[0_0_20px_rgba(249,115,22,0.2)] hover:shadow-[0_0_30px_rgba(249,115,22,0.4)]"
      disabled
    >
      <span class="btn-text flex items-center gap-2">
        <Icon name="lucide:search" width={20} />
        {t.search}
      </span>
      <span class="btn-loading hidden">
        <Icon name="lucide:loader-2" class="animate-spin" width={20} />
      </span>
    </button>
  </div>

  <form data-api-url={apiUrl} class="hidden"></form>

  <!-- Turnstile Container (Hidden visually but functional) -->
  <div class="mt-4 flex justify-center opacity-80 scale-90" id="turnstile-container">
    <div 
      class="cf-turnstile" 
      data-sitekey={turnstileSiteKey}
      data-callback="onTurnstileSuccess"
      data-theme="dark"
      data-appearance="interaction-only" 
    ></div>
  </div>

  <!-- Results/Status Area -->
  <div id="statusCard" class="mt-8 hidden animate-in fade-in slide-in-from-bottom-4 duration-500">
    
    <!-- Info Card -->
    <div class="bg-[#18181b] border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
      <div class="p-6 md:p-8 flex flex-col md:flex-row gap-6 md:gap-8">
        
        <!-- Thumbnail -->
        <div class="shrink-0 w-full md:w-64 aspect-video bg-[#27272a] rounded-xl overflow-hidden relative shadow-lg group">
           <img id="videoThumb" src="" alt="" class="w-full h-full object-cover hidden opacity-0 transition-opacity duration-700" onload="this.classList.remove('opacity-0')">
           <div id="thumbPlaceholder" class="absolute inset-0 flex items-center justify-center text-white/10">
              <Icon name="lucide:image" width={48} />
           </div>
           <!-- Provider Badge on Thumb -->
           <div id="providerBadge" class="absolute top-3 left-3 px-2 py-1 bg-black/80 backdrop-blur-md rounded-md text-[10px] uppercase font-bold text-white hidden items-center gap-1.5 border border-white/10">
               <!-- Icon & Text injected via JS -->
           </div>
        </div>

        <!-- Details & Options -->
        <div class="flex-grow flex flex-col justify-between">
          <div class="space-y-3">
             <div class="flex items-start justify-between gap-4">
               <div>
                  <h3 id="videoTitle" class="text-xl md:text-2xl font-bold text-white leading-tight line-clamp-2">{t.searching}</h3>
                  <p id="videoMeta" class="text-white/40 text-sm mt-1 font-mono flex items-center gap-2">
                     <span class="w-4 h-4 rounded-full bg-white/10 animate-pulse"></span> {t.waiting_metadata}
                  </p>
               </div>
             </div>
          </div>

          <!-- Dummy Options (Visual Only for now, as user backend defines logic) -->
          <div class="mt-6 p-4 bg-[#27272a]/50 rounded-xl border border-white/5 grid grid-cols-1 md:grid-cols-3 gap-4">
             <div class="space-y-1">
               <label class="text-[10px] uppercase font-bold text-white/30 tracking-wider">{t.format}</label>
               <div class="flex bg-[#18181b] p-1 rounded-lg border border-white/5">
                 <button class="flex-1 py-1.5 text-xs font-bold rounded-md bg-[#27272a] text-white shadow-sm">MP4</button>
                 <button class="flex-1 py-1.5 text-xs font-bold rounded-md text-white/40 hover:text-white transition-colors">MP3</button>
               </div>
             </div>
             
             <div class="space-y-1">
               <label class="text-[10px] uppercase font-bold text-white/30 tracking-wider">{t.quality}</label>
               <div class="relative">
                  <select disabled class="w-full bg-[#18181b] text-white/70 text-xs font-bold py-2.5 px-3 rounded-lg border border-white/5 appearance-none opacity-50 cursor-not-allowed">
                     <option>{t.best_available}</option>
                  </select>
                  <Icon name="lucide:chevron-down" class="absolute right-3 top-1/2 -translate-y-1/2 text-white/20" width={14} />
               </div>
             </div>

             <div class="space-y-1">
                <label class="text-[10px] uppercase font-bold text-white/30 tracking-wider">{t.status_label}</label>
                <div id="statusBadge" class="py-2 px-3 rounded-lg text-xs font-bold text-center border bg-yellow-500/10 text-yellow-500 border-yellow-500/20">
                   {t.waiting}
                </div>
             </div>
          </div>
        </div>
      </div>

      <!-- Action Footer -->
      <div class="px-6 md:px-8 pb-6 md:pb-8 pt-0">
          
          <!-- Progress Bar -->
          <div id="progressContainer" class="mb-4 space-y-2">
            <div class="flex justify-between text-xs font-mono text-white/50">
               <span id="progressStatusText">{t.starting}</span>
               <span id="progressPercent">0%</span>
            </div>
            <div class="h-2 bg-[#27272a] rounded-full overflow-hidden">
               <div id="progressFill" class="h-full bg-gradient-to-r from-[#22c55e] to-[#10b981] w-0 transition-all duration-300 shadow-[0_0_15px_rgba(34,197,94,0.4)]"></div>
            </div>
          </div>

          <!-- Download Button -->
          <a 
            id="downloadLink" 
            href="#" 
            target="_blank"
            class="hidden w-full py-4 bg-[#22c55e] hover:bg-[#16a34a] text-white font-black text-center uppercase tracking-wider rounded-xl shadow-[0_0_25px_rgba(34,197,94,0.3)] hover:shadow-[0_0_40px_rgba(34,197,94,0.5)] transition-all transform hover:-translate-y-0.5 active:translate-y-0 flex items-center justify-center gap-3"
          >
            <Icon name="lucide:download" width={24} stroke-width={3} />
            {t.download_now}
          </a>

          <!-- Error Message -->
          <div id="errorMessage" class="hidden p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-500 text-sm font-medium flex items-center gap-3">
             <Icon name="lucide:alert-circle" width={20} />
             <span id="errorText">{t.error_occurred}</span>
          </div>

      </div>
    </div>

    <!-- History Header (Visual Only) -->
    <div class="mt-8 mb-4 flex items-center justify-between px-2">
       <h4 class="text-white/50 font-bold flex items-center gap-2">
         <Icon name="lucide:clock" width={16} /> {t.history}
       </h4>
       <button class="text-xs text-white/30 hover:text-white transition-colors">{t.clear}</button>
    </div>

    <!-- Empty History State -->
    <div class="border border-dashed border-white/5 rounded-2xl p-12 flex flex-col items-center justify-center gap-4 text-white/20">
        <Icon name="lucide:inbox" width={48} />
        <p class="text-sm">{t.no_downloads}</p>
    </div>

  </div>
</section>

<script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

<script>
  // Configuration
  const POLL_INTERVAL = 1500;
  
  // State
  let turnstileToken = null;
  let pollTimer = null;

  // DOM Elements
  const section = document.querySelector('section[data-i18n]');
  const t = section ? JSON.parse(section.dataset.i18n) : {};

  const urlInput = document.getElementById('videoUrl');
  const submitBtn = document.getElementById('submitBtn');
  const btnText = submitBtn.querySelector('.btn-text');
  const btnLoading = submitBtn.querySelector('.btn-loading');
  const socialPreview = document.getElementById('socialIconPreview');
  
  const statusCard = document.getElementById('statusCard');
  const videoTitle = document.getElementById('videoTitle');
  const videoMeta = document.getElementById('videoMeta');
  const videoThumb = document.getElementById('videoThumb');
  const thumbPlaceholder = document.getElementById('thumbPlaceholder');
  const providerBadge = document.getElementById('providerBadge');
  
  const statusBadge = document.getElementById('statusBadge');
  const progressContainer = document.getElementById('progressContainer');
  const progressFill = document.getElementById('progressFill');
  const progressPercent = document.getElementById('progressPercent');
  const progressStatusText = document.getElementById('progressStatusText');
  
  const downloadLink = document.getElementById('downloadLink');
  const errorMessage = document.getElementById('errorMessage');
  const errorText = document.getElementById('errorText');

  // API Configuration
  const form = document.querySelector('form[data-api-url]');
  const apiUrl = form ? form.dataset.apiUrl : 'http://localhost:8080/api';
  
  // --- Social Icon Logic ---
  const socialIcons = {
    'youtube.com': { name: 'YouTube', color: '#FF0000', icon: '<path fill="currentColor" d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>' },
    'youtu.be': { name: 'YouTube', color: '#FF0000', icon: '<path fill="currentColor" d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>' },
    'instagram.com': { name: 'Instagram', color: '#E4405F', icon: '<path fill="currentColor" d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>' },
    'tiktok.com': { name: 'TikTok', color: '#000000', icon: '<path fill="currentColor" d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>' }
  };

  urlInput.addEventListener('input', (e) => {
    const url = e.target.value.toLowerCase();
    let found = null;
    
    // Check for social matches
    for (const [domain, data] of Object.entries(socialIcons)) {
      if (url.includes(domain)) {
        found = data;
        break;
      }
    }

    if (found) {
      socialPreview.innerHTML = `<svg viewBox="0 0 24 24" class="w-6 h-6" style="color: ${found.color}">${found.icon}</svg>`;
      socialPreview.classList.remove('opacity-0', 'translate-x-2');
    } else {
      socialPreview.classList.add('opacity-0', 'translate-x-2');
    }
  });

  // --- Turnstile & Form Logic ---

  // Global callback
  window.onTurnstileSuccess = (token) => {
    turnstileToken = token;
    submitBtn.disabled = false;
  };

  function resetTurnstile() {
    if (window.turnstile) {
      window.turnstile.reset();
    }
    turnstileToken = null;
    submitBtn.disabled = true;
  }

  function setLoading(loading) {
    if (loading) {
      btnText.classList.add('hidden');
      btnLoading.classList.remove('hidden');
      submitBtn.disabled = true;
    } else {
      btnText.classList.remove('hidden');
      btnLoading.classList.add('hidden');
      // Button stays disabled until new turnstile token
    }
  }

  // Helper: Get Domain
  function getDomain(url) {
     try {
       return new URL(url).hostname.replace('www.', '');
     } catch (e) {
       return 'link';
     }
  }

  // UI Updates
  function updateUI(status) {
    statusCard.classList.remove('hidden');
    
    // update metadata if available (assuming API might pass it back in status)
    if (status.title && status.title !== videoTitle.textContent) {
      videoTitle.textContent = status.title;
      // Also update thumbnail if backend gives it, else keep placeholder
      if (status.thumbnail) {
          videoThumb.src = status.thumbnail;
          videoThumb.classList.remove('hidden');
          thumbPlaceholder.classList.add('hidden');
      }
      
      // Update badge
      const domain = getDomain(urlInput.value);
      let provider = socialIcons[domain] || { name: domain, icon: null };
      
      // If we matched a known provider
      for (const [key, data] of Object.entries(socialIcons)) {
          if (domain.includes(key)) { provider = data; break; }
      }
      
      if(provider.name) {
         providerBadge.innerHTML = provider.icon ? `<svg viewBox="0 0 24 24" class="w-3 h-3 text-white fill-current">${provider.icon}</svg> ${provider.name}` : provider.name;
         providerBadge.style.backgroundColor = provider.color ? provider.color + 'aa' : '#000000aa'; 
         providerBadge.classList.replace('hidden', 'flex'); 
      }
      
      videoMeta.innerHTML = `<span class="w-4 h-4 rounded-full bg-green-500 mr-2"></span> ${t.detected}`;
    }

    // Progress
    progressFill.style.width = `${status.progress}%`;
    progressPercent.textContent = `${status.progress}%`;
    
    // Status Text Badge
    const badges = {
      pending: { text: t.status_pending, color: "text-yellow-500", bg: "bg-yellow-500/10", border: "border-yellow-500/20" },
      processing: { text: t.status_processing, color: "text-blue-500", bg: "bg-blue-500/10", border: "border-blue-500/20" },
      done: { text: t.status_done, color: "text-green-500", bg: "bg-green-500/10", border: "border-green-500/20" },
      error: { text: t.status_error, color: "text-red-500", bg: "bg-red-500/10", border: "border-red-500/20" }
    };
    
    const style = badges[status.status] || badges.pending;
    statusBadge.textContent = style.text;
    statusBadge.className = `py-2 px-3 rounded-lg text-xs font-bold text-center border ${style.color} ${style.bg} ${style.border}`;
    progressStatusText.textContent = style.text;

    // Done state
    if (status.status === 'done' && status.download_url) {
      downloadLink.href = status.download_url;
      downloadLink.classList.remove('hidden');
      progressContainer.classList.add('hidden'); 
      setLoading(false);
      resetTurnstile();
    }

    // Error state
    if (status.status === 'error') {
      errorMessage.classList.remove('hidden');
      errorText.textContent = status.error || t.error_unknown;
      setLoading(false);
      resetTurnstile();
    }
  }

  async function pollStatus(jobId) {
    try {
       const res = await fetch(`${apiUrl}/status/${jobId}`);
       const data = await res.json(); 
       updateUI(data);

       if (data.status === 'done' || data.status === 'error') {
         if (pollTimer) { clearInterval(pollTimer); pollTimer = null; }
       }
    } catch (e) {
      console.error(e);
    }
  }

  // Action
  submitBtn.addEventListener('click', async () => {
    if (!turnstileToken) return;
    
    const url = urlInput.value.trim();
    if (!url) return;

    // Reset UI
    if (pollTimer) clearInterval(pollTimer);
    downloadLink.classList.add('hidden');
    errorMessage.classList.add('hidden');
    progressContainer.classList.remove('hidden');
    progressFill.style.width = '0%';
    videoTitle.textContent = t.searching;
    statusCard.classList.remove('hidden'); 
    
    setLoading(true);

    // Call API
    try {
      const res = await fetch(`${apiUrl}/download`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-Turnstile-Token': turnstileToken
        },
        body: JSON.stringify({ url })
      });

      const data = await res.json();
      
      if (!res.ok) throw new Error(data.error || t.error_failed_start);
      
      // Start Polling
      pollStatus(data.job_id); // Initial check
      pollTimer = setInterval(() => pollStatus(data.job_id), POLL_INTERVAL);

    } catch (e) {
      errorMessage.classList.remove('hidden');
      errorText.textContent = e.message;
      setLoading(false);
      resetTurnstile();
    }
  });

</script>
