---
import '../../styles/global.css';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import { SEO } from 'astro-seo';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import appInterface from '../../assets/build-in-public-kingo.avif';
import buildInPublic from '../../assets/build-in-public-kingo.avif';
import issues from '../../assets/issues.avif';
import wailsIcon from '../../assets/wails-icon.ico';
import kingoIcon from '../../assets/kingo.ico';

const { canonical = "https://downkingo.com/", hreflangEn = "https://downkingo.com/", hreflangPt = "https://downkingo.com/pt/" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth selection:bg-primary/30 selection:text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Console Filter: Removes third-party/extension logs -->
    <script is:inline src="/scripts/console-filter.js" defer></script>
    <SEO
      title="DownKingo - Universal Media Toolbox"
      description="The all-in-one open source media toolkit. Download videos from 1000+ sites, remove backgrounds with AI, and convert media. Privacy-focused."
      canonical={canonical}
      openGraph={{
        basic: {
          title: "DownKingo - Universal Media Toolbox",
          type: "website",
          image: "https://downkingo.com/og-image.png",
          url: canonical
        },
        optional: {
          description: "The ultimate open-source toolkit. Download, convert, and process media with privacy. Powered by Go, Wails & FFmpeg."
        }
      }}
      twitter={{
        card: "summary_large_image",
        site: "@downkingo",
        creator: "@downkingo",
        title: "DownKingo - Universal Media Toolbox",
        description: "The ultimate open-source toolkit. Download, convert, and process media with privacy. Powered by Go, Wails & FFmpeg.",
        image: "https://downkingo.com/og-image.png"
      }}
      extend={{
        meta: [
          { name: "keywords", content: "media toolbox, universal video downloader, instagram photo downloader, image converter, ai background remover, ffmpeg gui, youtube to mp3, open source tool" },
          { name: "theme-color", content: "#050505" },
          { property: "og:locale", content: "en_US" },
          { property: "og:site_name", content: "DownKingo" },
          { property: "og:image:width", content: "1861" },
          { property: "og:image:height", content: "933" },
          { property: "og:image:type", content: "image/png" },
          { property: "og:image:alt", content: "DownKingo - Media Toolbox Interface" }
        ],
        link: [
          { rel: "icon", type: "image/x-icon", href: kingoIcon }
        ]
      }}
    />
    
    <!-- Hreflang Tags -->
    <link rel="alternate" hreflang="en" href={hreflangEn} />
    <link rel="alternate" hreflang="pt-BR" href={hreflangPt} />
    <link rel="alternate" hreflang="x-default" href={hreflangEn} />

    <!-- Preload Critical Fonts (Inter 900/400 + Mono 400/500) to avoid chains -->
    <link rel="preload" href="/fonts/inter-900.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/inter-400.woff2" as="font" type="font/woff2" crossorigin>

    <!-- JSON-LD SEO: SoftwareApplication -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "DownKingo",
      "operatingSystem": "Windows 10, Windows 11, macOS 10.15+, Linux",
      "applicationCategory": "MultimediaApplication",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "description": "An open-source privacy-focused media downloader and converter toolkit. Download videos from YouTube, Instagram, TikTok, and 1000+ sites in high quality (4K/8K).",
      "featureList": "4K Video Download, MP3 Converter, AI Background Remover, Playlist Download",
      "fileSize": "50MB",
      "softwareVersion": "2.0.0"
    }
    </script>

    <!-- JSON-LD SEO: FAQPage -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What engine does DownKingo use for downloading media?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "DownKingo leverages the industry-standard yt-dlp engine combined with FFmpeg for processing. This ensures support for high-quality downloads (up to 4K) from YouTube, TikTok, Instagram, and over 1000 other websites."
          }
        },
        {
          "@type": "Question",
          "name": "Is DownKingo safe and truly private?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. DownKingo is 100% Open Source and engineered with privacy by design. All video processing happens locally on your device. We do not collect telemetry, track usage, or have any servers to store your data."
          }
        },
        {
          "@type": "Question",
          "name": "Does DownKingo remove ads from videos?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. By converting streaming content directly into static files (MP4/MKV/MP3), all platform advertisements are naturally stripped away, giving you a clean, ad-free offline playback experience."
          }
        },
        {
          "@type": "Question",
          "name": "Can I download 4K videos from YouTube for free?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. DownKingo supports downloading videos in their highest available quality, including 4K (2160p), 8K (4320p), and 60fps, without any paywalls or premium subscriptions."
          }
        },
        {
          "@type": "Question",
          "name": "Is this better than online YouTube to MP3 converters?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Much better. Online converters are often full of pop-up ads, slow, and compress your audio. DownKingo runs natively on your PC, providing faster speeds, batch downloading, and original audio quality extraction."
          }
        },
        {
          "@type": "Question",
          "name": "Is DownKingo safe to use?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. DownKingo is 100% open source. The code is publicly auditable on GitHub. We don't install toolbars, bundled software, or any form of malware."
          }
        },
        {
          "@type": "Question",
          "name": "Do I need an internet connection?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You need internet to download content. However, all conversion features (format conversion, background removal) work completely offline once the app is installed."
          }
        },
        {
          "@type": "Question",
          "name": "Does DownKingo work on mobile?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "DownKingo is a desktop application for Windows, macOS, and Linux. There's no mobile app, but you can download on your PC and transfer files to your phone."
          }
        },
        {
          "@type": "Question",
          "name": "Is it legal to download YouTube videos?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Downloading copyrighted content without permission may violate terms of service. DownKingo is a tool — users are responsible for complying with local laws and platform policies."
          }
        },
        {
          "@type": "Question",
          "name": "What's the difference between DownKingo and online sites?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Online downloaders are slow, full of ads, and compress quality. DownKingo runs natively on your PC, offering faster speeds, batch downloads, and original quality preservation."
          }
        },
        {
          "@type": "Question",
          "name": "Can I download videos in 4K or 8K?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. DownKingo supports the highest available quality including 4K (2160p), 8K (4320p), and 60fps without any premium subscription."
          }
        },
        {
          "@type": "Question",
          "name": "Does DownKingo contain viruses or malware?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Absolutely not. DownKingo is open source and can be audited by anyone. We're hosted on GitHub and all releases are built transparently via CI/CD."
          }
        },
        {
          "@type": "Question",
          "name": "How much disk space do I need?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "The app itself is under 50MB. Storage for downloaded content depends on video quality — a 10-minute 4K video is approximately 1-2GB."
          }
        },
        {
          "@type": "Question",
          "name": "Can I download multiple videos at once?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. DownKingo supports batch downloading. You can paste multiple URLs or entire playlists and download them all simultaneously."
          }
        },
        {
          "@type": "Question",
          "name": "Does DownKingo work with a VPN?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. DownKingo works perfectly with VPNs. In fact, using a VPN can help access geo-restricted content from different regions."
          }
        }
      ]
    }
    </script>

    <!-- JSON-LD SEO: Organization -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "DownKingo",
      "url": "https://downkingo.com",
      "logo": "https://downkingo.com/kingo.webp",
      "sameAs": [
        "https://github.com/down-kingo/downkingo"
      ]
    }
    </script>

    <!-- JSON-LD SEO: WebSite + SearchAction -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "DownKingo",
      "url": "https://downkingo.com",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://downkingo.com/docs?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    </script>

    <!-- JSON-LD SEO: BreadcrumbList -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://downkingo.com/"
        }
      ]
    }
    </script>
    
    <!-- Preload Critical Assets -->

    
    <!-- Language Auto-Redirect -->
    <script is:inline src="/scripts/lang-redirect.js" defer></script>
</head>
<body class="bg-page text-swiss antialiased overflow-x-hidden relative" id="body">

    <!-- Noise Texture -->


    <!-- Navigation -->
    <Navigation lang="en" currentPage="home" />

    <!-- Main Content -->
    <main class="relative z-10 w-full overflow-hidden">
        
        <!-- Hero Section -->
        <section class="relative min-h-[90vh] flex flex-col items-center justify-center pt-24 px-6 overflow-hidden">
            <!-- Background Elements -->
            <div class="absolute inset-0 bg-grid-premium opacity-20 pointer-events-none"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/20 blur-[120px] rounded-full opacity-20 pointer-events-none mix-blend-screen animate-pulse duration-[5000ms]"></div>
            
            <div class="relative z-10 text-center max-w-5xl mx-auto space-y-10">
                <!-- Status Badge -->
                <div class="inline-flex items-center gap-3 border border-white/5 rounded-full pl-2 pr-4 py-1 bg-black/40 backdrop-blur-md hover:border-white/10 transition-colors">
                    <span class="flex h-2 w-2 relative">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-500 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
                    </span>
                    <span class="font-mono text-[10px] tracking-widest text-muted uppercase">System v2.0 Online</span>
                </div>

                <!-- Main Title -->
                <h1 class="font-black text-6xl md:text-9xl tracking-tighter uppercase leading-[0.85] select-none text-white drop-shadow-2xl">
                    Media <br><span class="text-transparent bg-clip-text bg-gradient-to-b from-white to-white/40">Toolbox.</span>
                </h1>
                
                <!-- Actions -->
                <div class="flex flex-col md:flex-row items-center justify-center gap-6 pt-8">
                     <a id="hero-download-btn" href="/download/" class="h-14 px-10 bg-white text-black font-black text-sm uppercase tracking-widest hover:bg-gray-200 transition-all rounded-full flex items-center gap-3 hover:scale-105 active:scale-95">
                             <span id="hero-download-text">Download v2.0</span>
                             <Icon id="hero-download-icon" name="lucide:arrow-down" width={20} />
                     </a>
                     <a href="/docs/" class="h-14 px-10 border border-white/20 hover:border-white text-white font-mono text-xs uppercase tracking-widest rounded-full flex items-center gap-3 transition-all hover:bg-white/5 hover:scale-105 active:scale-95">
                        <Icon name="lucide:book-open" width={20} />
                        <span>Documentation</span>
                     </a>
                </div>
            </div>
            
        </section>

        <!-- Marquee / Supported Sites -->
        <section class="py-10 border-y border-white/5 bg-black/50 overflow-hidden">
             <div class="relative w-full overflow-hidden text-center">
                 <p class="text-[10px] font-mono uppercase tracking-widest text-muted mb-6">Supported Platforms</p>
                 <div class="flex whitespace-nowrap animate-marquee opacity-60 hover:opacity-100 transition-opacity">
                     <!-- Set 1 -->
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><Icon name="simple-icons:youtube" /> YouTube</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><Icon name="simple-icons:tiktok" /> TikTok</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><Icon name="simple-icons:instagram" /> Instagram</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><Icon name="simple-icons:x" /> Twitter / X</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><Icon name="simple-icons:soundcloud" /> Soundcloud</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><Icon name="simple-icons:twitch" /> Twitch</span>
                     
                     <!-- GLOBO -->
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2">
