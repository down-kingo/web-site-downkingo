---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import appInterface from '../assets/build-in-public-kingo.avif';

// SEO Configuration
const title = "Download Spotify Music & Podcasts - DownKingo";
const description = "Download Spotify music, albums and podcasts in MP3. Listen offline without premium subscription. High quality conversion for free.";
const keywords = "download spotify music, spotify mp3 download, download spotify playlist, spotify downloader free, convert spotify mp3";

const canonical = "https://downkingo.com/spotify-downloader/";
const og = {
    basic: {
        title: "Download Spotify Music & Podcasts - DownKingo",
        type: "website",
        image: "https://downkingo.com/og-image.png",
        url: canonical
    }
};
---

<BaseLayout title={title} description={description} lang="en" canonical={canonical} opengraph={og} keywords={keywords}>

    <!-- Hero Section -->
    <section class="relative min-h-[80vh] flex flex-col items-center justify-center pt-24 px-6 overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 bg-grid-premium opacity-20 pointer-events-none"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-green-500/20 blur-[120px] rounded-full opacity-20 pointer-events-none mix-blend-screen animate-pulse duration-[5000ms]"></div>

        <div class="relative z-10 text-center max-w-5xl mx-auto space-y-10">
             <!-- Eyebrow -->
             <div class="inline-flex items-center gap-3 border border-green-500/20 rounded-full pl-2 pr-4 py-1 bg-green-500/5 backdrop-blur-md hover:border-green-500/40 transition-colors mx-auto">
                <Icon name="simple-icons:spotify" class="text-green-500" width={16} />
                <span class="font-mono text-[10px] tracking-widest text-green-200 uppercase">Spotify Music Downloader</span>
            </div>

            <!-- Main Title (H1 SEO Optimized) -->
            <h1 class="font-black text-5xl md:text-8xl tracking-tighter uppercase leading-[0.9] select-none text-white drop-shadow-2xl text-center mx-auto max-w-full">
                Download Music {' '}<br />{' '} <span class="text-transparent bg-clip-text bg-gradient-to-b from-green-500 to-green-900">from Spotify.</span>
            </h1>

            <p class="text-muted text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
                Download music, albums and podcasts from Spotify in MP3. Listen offline without a premium subscription. High quality conversion for free.
            </p>

            <!-- Actions -->
            <div class="flex flex-col md:flex-row items-center justify-center gap-6 pt-8">
                 <a id="hero-download-btn" href="/download/" class="h-14 px-10 bg-white text-black font-black text-sm uppercase tracking-widest hover:bg-gray-200 transition-all rounded-full flex items-center gap-3 hover:scale-105 active:scale-95 shadow-[0_0_20px_rgba(255,255,255,0.3)]">
                         <span id="hero-download-text">Free Download</span>
                         <Icon id="hero-download-icon" name="lucide:arrow-down" width={20} />
                 </a>
            </div>
        </div>
    </section>

    <!-- Features Section SPECIFIC TO SPOTIFY -->
    <section id="features" class="py-24 px-6 max-w-7xl mx-auto border-y border-white/5 bg-black/20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="p-8 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-colors group">
                <div class="mb-6 p-3 bg-green-500/10 w-fit rounded-lg text-green-500 group-hover:scale-110 transition-transform">
                    <Icon name="lucide:music" width={32} />
                </div>
                <h2 class="text-lg font-bold text-white mb-2 uppercase">High Quality MP3</h2>
                <p class="text-xs text-muted leading-relaxed font-mono">
                    Conversion to MP3 320kbps or FLAC lossless. Professional audio quality preserved in every downloaded track.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="p-8 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-colors group">
                <div class="mb-6 p-3 bg-green-500/10 w-fit rounded-lg text-green-500 group-hover:scale-110 transition-transform">
                    <Icon name="lucide:list-music" width={32} />
                </div>
                <h2 class="text-lg font-bold text-white mb-2 uppercase">Albums & Playlists</h2>
                <p class="text-xs text-muted leading-relaxed font-mono">
                    Download full albums and collaborative playlists. Paste the link and DownKingo downloads all tracks at once.
                </p>
            </div>

             <!-- Feature 3 -->
             <div class="p-8 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-colors group">
                <div class="mb-6 p-3 bg-green-500/10 w-fit rounded-lg text-green-500 group-hover:scale-110 transition-transform">
                    <Icon name="lucide:podcast" width={32} />
                </div>
                <h2 class="text-lg font-bold text-white mb-2 uppercase">Podcasts Offline</h2>
                <p class="text-xs text-muted leading-relaxed font-mono">
                    Save podcast episodes to listen without internet. Download entire series and listen during trips or workouts.
                </p>
            </div>
        </div>
    </section>

    <!-- Visual Demo Section -->
    <section class="py-32 px-6 max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="space-y-8">
                <span class="inline-block mb-4 font-mono text-xs text-green-500 uppercase tracking-widest border border-green-500/20 bg-green-500/5 px-2 py-1 rounded">yt-dlp Technology</span>
                <h2 class="text-4xl md:text-6xl font-black uppercase tracking-tight text-white">Spotify {' '}<br />{' '} Offline.</h2>
                <p class="text-muted text-lg leading-relaxed">
                    Listen to your favorite playlists without relying on internet or a premium subscription. Save everything to your PC.
                </p>
                <ul class="space-y-4 pt-4">
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                        <Icon name="lucide:check" class="text-green-500" width={18} /> No speed limits
                    </li>
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                        <Icon name="lucide:check" class="text-green-500" width={18} /> No ads or pop-ups
                    </li>
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                        <Icon name="lucide:check" class="text-green-500" width={18} /> No audio compression
                    </li>
                </ul>
            </div>

            <!-- Image Container -->
            <div class="relative group perspective-container">
                 <div class="absolute -inset-1 bg-gradient-to-r from-green-600/20 to-emerald-500/20 rounded-xl blur-xl opacity-50 group-hover:opacity-100 transition-opacity duration-700"></div>
                 <div class="relative rounded-xl overflow-hidden border border-white/10 shadow-2xl bg-[#050505] rotate-3d hover:transition-transform duration-500">
                      <Image src={appInterface} format="webp" alt="Download Spotify Music Interface" class="w-full h-auto object-cover opacity-90 group-hover:opacity-100 transition-opacity" />
                 </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section id="faq" class="py-24 px-6 max-w-4xl mx-auto border-t border-white/5">
        <h2 class="text-2xl font-black uppercase text-white mb-12 text-center tracking-widest">Spotify Downloader FAQ</h2>
        <div class="space-y-4">
            <details class="group bg-white/[0.02] border border-white/5 rounded-none open:bg-white/[0.04] transition-colors">
                <summary class="flex items-center justify-between p-6 cursor-pointer list-none font-bold text-white text-sm uppercase tracking-wide">
                    How to download music from Spotify?
                    <Icon name="lucide:chevron-down" class="group-open:rotate-180 transition-transform text-white/50" width={16} />
                </summary>
                <div class="px-6 pb-6 text-muted font-mono text-xs leading-relaxed border-t border-white/5 pt-4">
                    Copy the Spotify song, album or playlist link, paste it into DownKingo and click download. The conversion to MP3 at maximum quality is done automatically.
                </div>
            </details>

            <details class="group bg-white/[0.02] border border-white/5 rounded-none open:bg-white/[0.04] transition-colors">
                 <summary class="flex items-center justify-between p-6 cursor-pointer list-none font-bold text-white text-sm uppercase tracking-wide">
                    Do I need a Premium account?
                    <Icon name="lucide:chevron-down" class="group-open:rotate-180 transition-transform text-white/50" width={16} />
                </summary>
                <div class="px-6 pb-6 text-muted font-mono text-xs leading-relaxed border-t border-white/5 pt-4">
                    No! DownKingo works regardless of your account type. You can download music and podcasts without needing a premium subscription.
                </div>
            </details>

             <details class="group bg-white/[0.02] border border-white/5 rounded-none open:bg-white/[0.04] transition-colors">
                 <summary class="flex items-center justify-between p-6 cursor-pointer list-none font-bold text-white text-sm uppercase tracking-wide">
                    Is the audio quality good?
                    <Icon name="lucide:chevron-down" class="group-open:rotate-180 transition-transform text-white/50" width={16} />
                </summary>
                <div class="px-6 pb-6 text-muted font-mono text-xs leading-relaxed border-t border-white/5 pt-4">
                    Yes! DownKingo converts to MP3 at 320kbps, the same quality that Spotify Premium offers in streaming. For audiophiles, it also supports FLAC lossless.
                </div>
            </details>
        </div>
    </section>

</BaseLayout>
