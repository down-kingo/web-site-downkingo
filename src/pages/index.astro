---
import '../styles/global.css';
import { Image } from 'astro:assets';
import temaClaro from '../assets/tema-claro-com-sidebar.avif';
import buildInPublic from '../assets/build-in-public-kingo.avif';
import issues from '../assets/issues.avif';
import wailsIcon from '../assets/wails-icon.ico';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth selection:bg-primary/30 selection:text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="The ultimate privacy-focused media downloader and converter. Powered by Go & Wails. Support for YouTube, Instagram, TikTok. AI tools included.">
    <meta name="theme-color" content="#050505">
    <link rel="icon" type="image/x-icon" href="/icon.ico?v=2">
    
    <title>DownKingo - Universal Media Toolbox</title>
    
    <!-- JSON-LD SEO for FAQ -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "What engine does DownKingo use for downloading media?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "DownKingo leverages the industry-standard yt-dlp engine combined with FFmpeg for processing. This ensures support for high-quality downloads (up to 4K) from YouTube, TikTok, Instagram, and over 1000 other websites."
            }
          },
          {
            "@type": "Question",
            "name": "Is DownKingo safe and truly private?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes. DownKingo is 100% Open Source and engineered with privacy by design. All video processing happens locally on your device. We do not collect telemetry, track usage, or have any servers to store your data."
            }
          },
          {
            "@type": "Question",
            "name": "Does DownKingo remove ads from videos?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes. By converting streaming content directly into static files (MP4/MKV/MP3), all platform advertisements are naturally stripped away, giving you a clean, ad-free offline playback experience."
            }
          }
        ]
      }
    </script>
    
    <!-- Preload Critical Assets -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;900&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <script src="https://code.iconify.design/3/3.1.0/iconify.min.js"></script>
</head>
<body class="bg-page text-swiss antialiased overflow-x-hidden relative" id="body">

    <!-- Noise Texture -->
    <div class="fixed inset-0 pointer-events-none z-[60] opacity-[0.03] mix-blend-overlay" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"></div>

    <!-- Navigation -->
    <nav class="fixed top-6 left-1/2 -translate-x-1/2 z-[100] w-full max-w-sm md:max-w-2xl px-4" x-data="{ open: false }">
        <div class="glass rounded-full px-6 py-3 flex items-center justify-between border border-white/5 bg-black/50 backdrop-blur-xl">
            <a href="/" class="font-black text-lg tracking-tighter uppercase flex items-center gap-2 group">
                <span class="w-3 h-3 bg-primary rounded-full group-hover:scale-125 transition-transform duration-300"></span>
                DownKingo
            </a>
            
            <!-- Desktop Menu -->
            <div class="hidden md:flex gap-8 font-mono text-xs font-medium text-muted">
                <a href="/" class="hover:text-white transition-colors">HOME</a>
                <a href="/download" class="hover:text-white transition-colors">DOWNLOAD</a>
                <a href="#build-in-public" class="hover:text-white transition-colors">ROADMAP</a>
                <a href="https://github.com/down-kingo/downkingo" target="_blank" class="flex items-center gap-1 hover:text-white transition-colors">
                    GITHUB <span class="iconify" data-icon="lucide:external-link" data-width="12"></span>
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="md:hidden text-white p-1 hover:bg-white/10 rounded-full transition-colors" aria-label="Menu">
                <span class="iconify" data-icon="lucide:menu" data-width="20"></span>
            </button>
        </div>

        <!-- Mobile Menu Overlay -->
        <div id="mobile-menu" class="absolute top-[120%] left-4 right-4 bg-black/90 glass border border-white/10 rounded-2xl p-6 flex-col gap-4 hidden origin-top scale-95 opacity-0 transition-all duration-300">
             <a href="/" class="text-sm font-bold text-white py-2 border-b border-white/5 hover:text-primary transition-colors">HOME</a>
             <a href="/download" class="text-sm font-bold text-white py-2 border-b border-white/5 hover:text-primary transition-colors">DOWNLOAD</a>
             <a href="#build-in-public" class="text-sm font-bold text-white py-2 border-b border-white/5 hover:text-primary transition-colors">ROADMAP</a>
             <a href="https://github.com/down-kingo/downkingo" target="_blank" class="text-sm font-bold text-white py-2 flex items-center justify-between hover:text-primary transition-colors">
                GITHUB <span class="iconify" data-icon="lucide:external-link" data-width="14"></span>
             </a>
        </div>
    </nav>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
             const btn = document.getElementById('mobile-menu-btn');
             const menu = document.getElementById('mobile-menu');
             let isOpen = false;

             btn.addEventListener('click', () => {
                 isOpen = !isOpen;
                 if (isOpen) {
                     menu.classList.remove('hidden', 'scale-95', 'opacity-0');
                     menu.classList.add('flex', 'scale-100', 'opacity-100');
                     btn.innerHTML = '<span class="iconify" data-icon="lucide:x" data-width="20"></span>';
                 } else {
                     menu.classList.add('hidden', 'scale-95', 'opacity-0');
                     menu.classList.remove('flex', 'scale-100', 'opacity-100');
                     btn.innerHTML = '<span class="iconify" data-icon="lucide:menu" data-width="20"></span>';
                 }
             });

             // Close on link click
             menu.querySelectorAll('a').forEach(link => {
                 link.addEventListener('click', () => {
                     isOpen = false;
                     menu.classList.add('hidden', 'scale-95', 'opacity-0');
                     menu.classList.remove('flex', 'scale-100', 'opacity-100');
                     btn.innerHTML = '<span class="iconify" data-icon="lucide:menu" data-width="20"></span>';
                 });
             });
        });
    </script>

    <!-- Main Content -->
    <main class="relative z-10 w-full overflow-hidden">
        
        <!-- Hero Section -->
        <section class="relative min-h-[90vh] flex flex-col items-center justify-center pt-24 px-6 overflow-hidden">
            <!-- Background Elements -->
            <div class="absolute inset-0 bg-grid-premium opacity-20 pointer-events-none"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/20 blur-[120px] rounded-full opacity-20 pointer-events-none mix-blend-screen animate-pulse duration-[5000ms]"></div>
            
            <div class="relative z-10 text-center max-w-5xl mx-auto space-y-10">
                <!-- Status Badge -->
                <div class="inline-flex items-center gap-3 border border-white/5 rounded-full pl-2 pr-4 py-1 bg-black/40 backdrop-blur-md hover:border-white/10 transition-colors">
                    <span class="flex h-2 w-2 relative">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-500 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
                    </span>
                    <span class="font-mono text-[10px] tracking-widest text-muted uppercase">System v2.0 Online</span>
                </div>

                <!-- Main Title -->
                <h1 class="font-black text-6xl md:text-9xl tracking-tighter uppercase leading-[0.85] select-none text-white drop-shadow-2xl">
                    Media <br><span class="text-transparent bg-clip-text bg-gradient-to-b from-white to-white/40">Toolbox.</span>
                </h1>
                
                <!-- Actions -->
                <div class="flex flex-col md:flex-row items-center justify-center gap-6 pt-8">
                     <a id="hero-download-btn" href="/download" class="h-14 px-10 bg-white text-black font-black text-sm uppercase tracking-widest hover:bg-gray-200 transition-all rounded-full flex items-center gap-3 hover:scale-105 active:scale-95 shadow-[0_0_20px_rgba(255,255,255,0.3)]">
                             <span id="hero-download-text">Download v2.0</span>
                             <span id="hero-download-icon" class="iconify" data-icon="lucide:arrow-down" data-width="20"></span>
                     </a>
                     <a href="/intro" class="h-14 px-10 border border-white/20 hover:border-white text-white font-mono text-xs uppercase tracking-widest rounded-full flex items-center gap-3 transition-all hover:bg-white/5 hover:scale-105 active:scale-95">
                        <span class="iconify" data-icon="lucide:book-open" data-width="20"></span>
                        <span>Documentation</span>
                     </a>
                </div>
            </div>
            
        </section>

        <!-- Marquee / Supported Sites -->
        <section class="py-10 border-y border-white/5 bg-black/50 overflow-hidden">
             <div class="relative w-full overflow-hidden text-center">
                 <p class="text-[10px] font-mono uppercase tracking-widest text-muted mb-6">Supported Platforms</p>
                 <div class="flex whitespace-nowrap animate-marquee opacity-60 hover:opacity-100 transition-opacity">
                     <!-- Set 1 -->
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:youtube"></span> YouTube</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:tiktok"></span> TikTok</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:instagram"></span> Instagram</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:x"></span> Twitter / X</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:soundcloud"></span> Soundcloud</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:twitch"></span> Twitch</span>
                     
                     <!-- GLOBO -->
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path fill-rule="evenodd" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 13c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm6-3c0 2.37-1.4 4.42-3.46 5.28-.5.21-1.03.38-1.57.49l-.02.01c-.13.03-.27.05-.41.07l-.1.01c-.14.02-.29.04-.44.04-.15 0-.29-.02-.44-.04l-.1-.01c-.14-.02-.28-.04-.41-.07l-.02-.01c-.54-.11-1.07-.28-1.57-.49C7.4 16.42 6 14.37 6 12s1.4-4.42 3.46-5.28c.5-.21 1.03-.38 1.57-.49l.02-.01c.14-.03.28-.05.41-.07l.1-.01c.15-.02.29-.04.44-.04.15 0 .29.02.44.04l.1.01c.14.02.28.04.41.07l.02.01c.54.11 1.07.28 1.57.49C16.6 7.58 18 9.63 18 12z" clip-rule="evenodd"/></svg>
                        Globo
                     </span>

                     <!-- ESPN (Font Simulation: Impact Italic) -->
                     <span class="mx-12 text-lg text-white cursor-default flex items-center gap-2" style="font-family: Impact, sans-serif; font-style: italic; letter-spacing: 1px;">
                        ESPN
                     </span>
                     
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:pinterest"></span> Pinterest</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:reddit"></span> Reddit</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:facebook"></span> Facebook</span>

                     <!-- Set 2 (Duplicate for Loop) -->
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:youtube"></span> YouTube</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:tiktok"></span> TikTok</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:instagram"></span> Instagram</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:x"></span> Twitter / X</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:soundcloud"></span> Soundcloud</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:twitch"></span> Twitch</span>
                     
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path fill-rule="evenodd" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 13c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm6-3c0 2.37-1.4 4.42-3.46 5.28-.5.21-1.03.38-1.57.49l-.02.01c-.13.03-.27.05-.41.07l-.1.01c-.14.02-.29.04-.44.04-.15 0-.29-.02-.44-.04l-.1-.01c-.14-.02-.28-.04-.41-.07l-.02-.01c-.54-.11-1.07-.28-1.57-.49C7.4 16.42 6 14.37 6 12s1.4-4.42 3.46-5.28c.5-.21 1.03-.38 1.57-.49l.02-.01c.14-.03.28-.05.41-.07l.1-.01c.15-.02.29-.04.44-.04.15 0 .29.02.44.04l.1.01c.14.02.28.04.41.07l.02.01c.54.11 1.07.28 1.57.49C16.6 7.58 18 9.63 18 12z" clip-rule="evenodd"/></svg>
                        Globo
                     </span>

                     <!-- ESPN (Font Simulation: Impact Italic) -->
                     <span class="mx-12 text-lg text-white cursor-default flex items-center gap-2" style="font-family: Impact, sans-serif; font-style: italic; letter-spacing: 1px;">
                        ESPN
                     </span>
                     
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:pinterest"></span> Pinterest</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:reddit"></span> Reddit</span>
                     <span class="mx-12 text-sm font-bold uppercase text-white cursor-default flex items-center gap-2"><span class="iconify" data-icon="simple-icons:facebook"></span> Facebook</span>
                 </div>
             </div>
        </section>

        <!-- DATA / FEATURES Section -->
        <section id="features" class="py-32 px-6 max-w-7xl mx-auto border-b border-white/5">
            <div class="space-y-32">
                
                <!-- FEATURE BLOCK 1: Architecture + Screen -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                    
                    <!-- Text Content -->
                    <div class="space-y-8 reveal-wrapper">
                        <span class="inline-block mb-4 font-mono text-xs text-primary uppercase tracking-widest border border-primary/20 bg-primary/5 px-2 py-1 rounded">Architecture</span>
                        <h2 class="text-4xl md:text-6xl font-black uppercase tracking-tighter text-white">Engineered<br>in Go.</h2>
                        
                        <ul class="space-y-6 pt-4">
                            <li class="flex items-start gap-4 group">
                                <div class="p-2 rounded-lg bg-white/5 group-hover:bg-primary/10 transition-colors">
                                    <Image src={wailsIcon} alt="Wails" width={48} height={48} class="w-5 h-5 object-contain" />
                                </div>
                                <div>
                                    <h4 class="text-white font-bold text-sm uppercase">Wails Framework</h4>
                                    <p class="text-xs text-muted mt-1 leading-relaxed">The lightweight power of Go for the backend, bridging native system webviews.</p>
                                </div>
                            </li>
                            <li class="flex items-start gap-4 group">
                                <div class="p-2 rounded-lg bg-white/5 group-hover:bg-primary/10 transition-colors">
                                    <span class="iconify text-primary" data-icon="simple-icons:react" data-width="20"></span>
                                </div>
                                <div>
                                    <h4 class="text-white font-bold text-sm uppercase">React 19</h4>
                                    <p class="text-xs text-muted mt-1 leading-relaxed">Powered by the latest React features for instant interactions and a fluid UI.</p>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <!-- Visual Content: App Screenshot -->
                    <div class="relative group reveal-wrapper perspective-container">
                        <!-- Glow Effect -->
                        <div class="absolute -inset-1 bg-gradient-to-r from-primary/20 to-purple-500/20 rounded-xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
                        
                        <!-- Image Container -->
                        <div class="relative rounded-xl overflow-hidden border border-white/10 shadow-2xl bg-[#050505] rotate-3d hover:transition-transform duration-500">
                             <!-- Mac/Window Controls Decoration -->
                             <div class="h-8 bg-[#111] border-b border-white/5 flex items-center px-4 gap-2">
                                <div class="w-3 h-3 rounded-full bg-red-500/20 text-red-500 flex items-center justify-center text-[8px] opacity-50"></div>
                                <div class="w-3 h-3 rounded-full bg-yellow-500/20 text-yellow-500 opacity-50"></div>
                                <div class="w-3 h-3 rounded-full bg-green-500/20 text-green-500 opacity-50"></div>
                                <div class="ml-auto text-[10px] font-mono text-muted/50">downkingo-v2</div>
                             </div>
                             
                             <Image src={temaClaro} alt="DownKingo Dark Mode Interface" class="w-full h-auto object-cover opacity-90 group-hover:opacity-100 transition-opacity" />
                             
                             <!-- Overlay Gradient -->
                             <div class="absolute inset-0 bg-gradient-to-t from-[#050505] via-transparent to-transparent opacity-20 pointer-events-none"></div>
                        </div>
                    </div>
                </div>

                <!-- FEATURE BLOCK 2: Terminal + Capabilities -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                    
                    <!-- Visual Content: Terminal (Left) -->
                    <div class="relative w-full perspective-container order-2 lg:order-1">
                        <!-- Terminal Window -->
                        <div class="bg-[#09090b] border border-white/10 rounded-lg overflow-hidden shadow-2xl reveal-wrapper rotate-3d-reverse font-mono text-[10px] md:text-xs leading-relaxed select-none group">
                            
                            <!-- Terminal Header -->
                            <div class="flex items-center justify-between px-4 py-2 bg-[#111113] border-b border-white/5 transition-colors group-hover:bg-[#1a1a1c]">
                                <div class="flex items-center gap-2 text-muted">
                                    <span class="iconify" data-icon="lucide:terminal-square" data-width="14"></span>
                                    <span class="uppercase tracking-widest text-[10px] font-bold">Console</span>
                                </div>
                                <div class="flex gap-2 opacity-50">
                                    <span class="iconify" data-icon="lucide:lock" data-width="12"></span>
                                    <span class="iconify" data-icon="lucide:maximize" data-width="12"></span>
                                    <span class="iconify" data-icon="lucide:chevron-down" data-width="12"></span>
                                </div>
                            </div>

                            <!-- Terminal Content -->
                            <div class="p-4 space-y-3 h-[400px] overflow-hidden relative">
                                <!-- Background Grid Effect inside terminal -->
                                <div class="absolute inset-0 bg-grid-premium opacity-5 pointer-events-none"></div>

                                <!-- Lines -->
                                <div class="flex gap-3 text-cyan-500/80 animate-fade-in-up" style="animation-delay: 100ms;">
                                    <span class="iconify mt-0.5" data-icon="lucide:info" data-width="12"></span>
                                    <span>Fetching information...</span>
                                    <span class="ml-auto opacity-30">00:04:34</span>
                                </div>

                                <div class="flex gap-3 text-emerald-500 bg-emerald-500/5 py-1 -mx-2 px-2 rounded animate-fade-in-up" style="animation-delay: 200ms;">
                                    <span class="iconify mt-0.5" data-icon="lucide:check" data-width="12"></span>
                                    <span>"you need to learn FFmpeg RIGHT NOW!!" found</span>
                                    <span class="ml-auto opacity-30">00:04:43</span>
                                </div>

                                <div class="flex gap-3 text-muted animate-fade-in-up" style="animation-delay: 300ms;">
                                    <span class="iconify mt-0.5" data-icon="lucide:info" data-width="12"></span>
                                    <span class="truncate">Extracting URL: https://www.youtube.com/watch?v=...</span>
                                    <span class="ml-auto opacity-30">00:05:00</span>
                                </div>

                                <div class="flex gap-3 text-muted animate-fade-in-up" style="animation-delay: 400ms;">
                                    <span class="iconify mt-0.5" data-icon="lucide:info" data-width="12"></span>
                                    <span>Downloading 1 format(s): 137+140-9</span>
                                    <span class="ml-auto opacity-30">00:05:03</span>
                                </div>

                                <!-- Progress Bar 1 -->
                                <div class="space-y-1 pt-2 animate-fade-in-up" style="animation-delay: 600ms;">
                                    <div class="flex gap-3 text-cyan-400">
                                        <span class="iconify mt-0.5" data-icon="lucide:loader-2" data-width="12"></span>
                                        <span>Downloading video...</span>
                                        <span class="ml-auto text-cyan-400">99%</span>
                                        <span class="text-cyan-400/50">5.7MiB</span>
                                    </div>
                                    <div class="h-1 w-full bg-white/5 rounded-full overflow-hidden">
                                        <div class="h-full bg-cyan-500 w-[99%] shadow-[0_0_10px_rgba(6,182,212,0.5)]"></div>
                                    </div>
                                </div>

                                <!-- Progress Bar 2 -->
                                <div class="space-y-1 pt-2 animate-fade-in-up" style="animation-delay: 800ms;">
                                    <div class="flex gap-3 text-cyan-400">
                                        <span class="iconify mt-0.5" data-icon="lucide:loader-2" data-width="12"></span>
                                        <span>Downloading audio...</span>
                                        <span class="ml-auto text-cyan-400">93%</span>
                                        <span class="text-cyan-400/50">751KiB</span>
                                    </div>
                                    <div class="h-1 w-full bg-white/5 rounded-full overflow-hidden">
                                        <div class="h-full bg-cyan-500 w-[93%] shadow-[0_0_10px_rgba(6,182,212,0.5)]"></div>
                                    </div>
                                </div>

                                <div class="flex gap-3 text-purple-400 pt-2 animate-fade-in-up" style="animation-delay: 1000ms;">
                                    <span class="iconify mt-0.5" data-icon="lucide:merge" data-width="12"></span>
                                    <span>Merging Audio and Video...</span>
                                    <span class="ml-auto opacity-30">00:05:30</span>
                                </div>

                                <div class="flex gap-3 text-amber-500 animate-fade-in-up" style="animation-delay: 1200ms;">
                                    <span class="iconify mt-0.5" data-icon="lucide:alert-triangle" data-width="12"></span>
                                    <span>Cleaning temp files...</span>
                                    <span class="ml-auto opacity-30">00:05:31</span>
                                </div>

                                <div class="flex gap-3 text-muted/50 animate-fade-in-up" style="animation-delay: 1400ms;">
                                    <span class="iconify mt-0.5" data-icon="lucide:file-video" data-width="12"></span>
