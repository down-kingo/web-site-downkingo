---
import '../../styles/global.css';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import { SEO } from 'astro-seo';
import Navigation from '../../components/Navigation.astro';

// Metadata for SEO
const title = "Download DownKingo - Universal Media Toolbox";
const description = "Download DownKingo for Windows, macOS, and Linux. The privacy-focused media downloader powered by Go & Wails.";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth selection:bg-primary/30 selection:text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <SEO
      title={title}
      description={description}
      canonical="https://downkingo.com/download"
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "https://downkingo.com/og-image.png",
          url: "https://downkingo.com/download"
        }
      }}
      charset="UTF-8"
      extend={{
        meta: [
          { name: "theme-color", content: "#050505" },
          { property: "og:locale", content: "en_US" },
          { property: "og:site_name", content: "DownKingo" },
          { property: "og:image:width", content: "1861" },
          { property: "og:image:height", content: "933" },
          { property: "og:image:type", content: "image/png" },
          { property: "og:image:alt", content: "DownKingo - Media Toolbox Interface" }
        ],
        link: [
          { rel: "icon", type: "image/x-icon", href: "/icon.ico?v=3" }
        ]
      }}
    />
    
    <script type="text/partytown" defer data-domain="downkingo.com" src="https://plausible.io/js/script.js"></script>
</head>
<body class="bg-page text-swiss antialiased overflow-x-hidden relative min-h-screen flex flex-col">

    <!-- Noise Texture -->
    <div class="fixed inset-0 pointer-events-none z-[60] opacity-[0.03] mix-blend-overlay" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"></div>

    <!-- Navigation -->
    <Navigation lang="en" currentPage="download" />

    <!-- Main Content -->
    <main class="flex-grow relative z-10 w-full pt-32 pb-20 px-6">
        
        <!-- Header -->
        <div class="max-w-4xl mx-auto text-center space-y-6 mb-20">
            <h1 class="font-black text-5xl md:text-7xl tracking-tight uppercase text-white drop-shadow-2xl">
                Get <span class="text-transparent bg-clip-text bg-gradient-to-b from-white to-white/40">DownKingo.</span>
            </h1>
            <p class="text-muted text-lg max-w-xl mx-auto leading-relaxed">
                Choose your platform. Free, Open Source, and Privacy-Focused.
                <br>Latest Version: <span class="font-mono text-primary">v2.0.0</span>
            </p>
        </div>

        <!-- Download Cards Grid -->
        <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8" id="download-grid">
            
            <!-- Windows (Default Highlighted) -->
            <div id="card-windows" class="group relative bg-[#09090b] border border-white/10 rounded-2xl p-8 transition-all duration-300 hover:-translate-y-1 hover:border-blue-500/50">
                <div class="absolute inset-x-0 h-px top-0 bg-gradient-to-r from-transparent via-blue-500/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                
                <div class="h-12 w-12 bg-blue-500/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-blue-500/20 transition-colors">
                    <Icon name="simple-icons:windows" class="text-blue-400" width={24} />
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-2">Windows</h3>
                <p class="text-sm text-muted font-mono mb-6">Windows 10/11 (64-bit)</p>
                
                <a href="https://github.com/down-kingo/downkingo/releases/download/v2.0.0/DownKingo.exe" class="block w-full py-4 rounded-lg bg-white text-black font-black text-center uppercase tracking-widest text-xs hover:bg-gray-200 transition-colors">
                    Download .exe
                </a>
                <div class="mt-4 flex justify-center gap-4 text-[10px] text-muted font-mono">
                    <span class="text-emerald-500 flex items-center gap-1"><Icon name="lucide:check-circle" width={10} /> Verified</span>
                </div>
            </div>

            <!-- Linux -->
            <div id="card-linux" class="group relative bg-[#09090b] border border-white/10 rounded-2xl p-8 hover:border-cyan-500/30 transition-all duration-300 hover:-translate-y-1 opacity-80 hover:opacity-100">
                 <div class="absolute inset-x-0 h-px top-0 bg-gradient-to-r from-transparent via-cyan-500/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

                <div class="h-12 w-12 bg-orange-500/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-orange-500/20 transition-colors">
                    <Icon name="simple-icons:linux" class="text-orange-400" width={24} />
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-2">Linux <span class="text-xs font-mono text-cyan-500 border border-cyan-500/20 bg-cyan-500/5 px-2 py-1 rounded ml-2 align-middle">BETA</span></h3>
                <p class="text-sm text-muted font-mono mb-6">AppImage (Universal)</p>
                
                <a href="https://github.com/down-kingo/downkingo/releases/download/v2.0.0/DownKingo.AppImage" class="block w-full py-4 rounded-lg bg-white/5 border border-white/10 text-white font-black text-center uppercase tracking-widest text-xs hover:bg-white hover:text-black transition-all">
                    Download AppImage
                </a>
                <div class="mt-4 flex justify-center gap-4 text-[10px] text-muted font-mono">
                    <span>v2.0.0</span>
                </div>
            </div>

            <!-- macOS -->
            <div id="card-mac" class="group relative bg-[#09090b] border border-white/10 rounded-2xl p-8 hover:border-yellow-500/30 transition-all duration-300 hover:-translate-y-1 opacity-80 hover:opacity-100">
                 <div class="absolute inset-x-0 h-px top-0 bg-gradient-to-r from-transparent via-yellow-500/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

                <div class="h-12 w-12 bg-white/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-white/20 transition-colors">
                    <Icon name="simple-icons:apple" class="text-white" width={24} />
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-2">macOS <span class="text-xs font-mono text-yellow-500 border border-yellow-500/20 bg-yellow-500/5 px-2 py-1 rounded ml-2 align-middle">LEGACY</span></h3>
                <p class="text-xs text-muted font-mono mb-6 leading-relaxed">
                    v1.1.0 "Kingo Classic"<br>
                    <span class="text-white/40 italic">v2.0 not yet available for Mac</span>
                </p>
                
                <a href="https://github.com/down-kingo/downkingo/releases/download/v1.1.0/Kinematic.dmg" class="block w-full py-4 rounded-lg bg-white/5 border border-white/10 text-white font-black text-center uppercase tracking-widest text-xs hover:bg-white hover:text-black transition-all">
                    Download v1.1.0
                </a>
                <div class="mt-4 flex justify-center gap-4 text-[10px] text-muted font-mono">
                    <span class="hover:text-white cursor-pointer" title="Supports Intel Macs">Intel</span>
                    <span>•</span>
                    <span class="hover:text-white cursor-pointer" title="Requires Rosetta 2">Apple Silicon</span>
                </div>
            </div>

        </div>

    </main>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-white/5 bg-black mt-auto">
            <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-end justify-between gap-6">
                <div>
                <span class="font-black text-2xl text-white tracking-tighter uppercase block">DownKingo<span class="text-primary">.</span></span>
                <span class="font-mono text-[10px] text-muted uppercase mt-2 block">Feat. Wails v2 + React</span>
                </div>
                
                <div class="flex flex-col md:items-end gap-2">
                    <p class="font-mono text-[10px] text-muted uppercase">© 2026 - MIT Open Source License</p>
                    <div class="flex gap-4 mt-2">
                    <a href="https://github.com/down-kingo/downkingo" target="_blank" aria-label="GitHub" class="text-muted hover:text-white transition-colors"><Icon name="simple-icons:github" /></a>
                    <a href="https://twitter.com/downkingo" target="_blank" aria-label="Twitter" class="text-muted hover:text-white transition-colors"><Icon name="simple-icons:x" /></a>
                    </div>
                </div>
            </div>
    </footer>

    <!-- OS Detection Script -->
    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
             const userAgent = window.navigator.userAgent;
             const platform = window.navigator.platform;
             
             const winCard = document.getElementById('card-windows');
             const macCard = document.getElementById('card-mac');
             const linCard = document.getElementById('card-linux');

             // Highlight Logic
             if (platform.indexOf('Win') !== -1) {
                 winCard.classList.remove('opacity-80');
                 winCard.classList.add('scale-105', 'border-blue-500', 'shadow-[0_0_30px_rgba(59,130,246,0.2)]', 'z-10', 'opacity-100');
             } else if (platform.indexOf('Mac') !== -1) {
                 macCard.classList.remove('opacity-80');
                 macCard.classList.add('scale-105', 'border-yellow-500', 'shadow-[0_0_30px_rgba(234,179,8,0.2)]', 'z-10', 'opacity-100');
             } else if (platform.indexOf('Linux') !== -1) {
                 linCard.classList.remove('opacity-80');
                 linCard.classList.add('scale-105', 'border-cyan-500', 'shadow-[0_0_30px_rgba(6,182,212,0.2)]', 'z-10', 'opacity-100');
             }
        });
    </script>
</body>
</html>
