                    <h3 class="text-2xl font-bold text-white mb-8">Support for Over <span class="text-primary">100+ Sites</span></h3>
                    <div class="flex flex-wrap justify-center gap-3">
                         {['Facebook', 'Twitter / X', 'Pinterest', 'Vimeo', 'Kwai', 'Dailymotion', 'Twitch Clips', 'Reddit', 'Tumblr', 'SoundCloud', 'Bandcamp', 'TED'].map((site) => (
                            <span class="px-4 py-2 bg-white/5 border border-white/5 rounded-full text-sm text-muted hover:text-white hover:bg-white/10 hover:border-white/20 transition-all cursor-default">
                                {site}
                            </span>
                         ))}
                    </div>
                </div>

                <!-- Formats -->
                <div class="text-center space-y-8">
                     <h3 class="text-2xl font-bold text-white">High Fidelity Formats</h3>
                     <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <div class="bg-[#18181b] p-4 rounded-2xl border border-white/5 flex flex-col items-center gap-2">
                            <span class="text-blue-500 font-bold text-xl">MP4</span>
                            <span class="text-muted text-xs uppercase">HD / 4K Video</span>
                        </div>
                        <div class="bg-[#18181b] p-4 rounded-2xl border border-white/5 flex flex-col items-center gap-2">
                            <span class="text-purple-500 font-bold text-xl">MP3</span>
                            <span class="text-muted text-xs uppercase">320kbps Audio</span>
                        </div>
