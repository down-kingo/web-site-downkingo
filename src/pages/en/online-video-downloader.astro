---
import '../../styles/global.css';
import { SEO } from 'astro-seo';
import Navigation from '../../components/Navigation.astro';
import DownloadSection from '../../components/DownloadSection.astro';
import Footer from '../../components/Footer.astro';

// Metadata for SEO
const title = "Download Online Videos Free - DownKingo";
const description = "Download videos from YouTube, Instagram, TikTok and more with DownKingo Online Downloader. Free tool, fast and no installation required.";

// Environment variables (with fallbacks)
const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '1x00000000000000000000AA'; // Cloudflare Test Key allowed for localhost
const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8080/api';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth selection:bg-primary/30 selection:text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Console Filter: Removes third-party/extension logs -->
    <script src="/scripts/console-filter.js"></script>
    <SEO
      title={title}
      description={description}
      canonical="https://downkingo.com/en/online-video-downloader"
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "https://downkingo.com/og-image.png",
          url: "https://downkingo.com/en/online-video-downloader"
        }
      }}
      charset="UTF-8"
      extend={{
        meta: [
          { name: "theme-color", content: "#050505" },
          { property: "og:locale", content: "en_US" },
          { property: "og:site_name", content: "DownKingo" }
        ],
        link: [
          { rel: "icon", type: "image/x-icon", href: "/icon.ico?v=3" }
        ]
      }}
    />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "DownKingo Online Video Downloader",
      "applicationCategory": "MultimediaApplication",
      "operatingSystem": "Any",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "description": description,
      "featureList": "Download videos from YouTube, Instagram, TikTok, Facebook and Twitter in high quality (4K, 1080p). Convert to MP3 and MP4 for free."
    })}></script>
    
    <script type="text/partytown" defer data-domain="downkingo.com" src="https://plausible.io/js/script.js"></script>
</head>
<body class="bg-page text-swiss antialiased overflow-x-hidden relative min-h-screen flex flex-col">

    <!-- Noise Texture -->
    <div class="fixed inset-0 pointer-events-none z-[60] opacity-[0.03] mix-blend-overlay" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"></div>

    <!-- Navigation -->
    <Navigation lang="en" currentPage="online" />

    <!-- Main Content -->
    <!-- Main Content -->
    <main class="flex-grow relative z-10 w-full pt-28 md:pt-36 pb-20 px-4 md:px-6 flex flex-col items-center overflow-x-hidden">
        
        <!-- Header with Enhanced Hero -->
        <div class="max-w-[1200px] mx-auto text-center space-y-6 md:space-y-10 mb-12 md:mb-20 relative pt-6 md:pt-10">
            
            <!-- Dynamic Background Glow -->
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[300px] md:w-[800px] h-[300px] md:h-[500px] bg-gradient-to-tr from-primary/20 via-purple-500/10 to-blue-500/10 rounded-full blur-[80px] md:blur-[120px] -z-10 pointer-events-none opacity-60 mix-blend-screen animate-pulse-slow"></div>

            <!-- Modern Pill Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-1 md:px-4 md:py-1.5 rounded-full border border-white/10 bg-white/5 backdrop-blur-xl shadow-[0_0_20px_-10px_rgba(255,255,255,0.2)] hover:border-white/20 transition-colors cursor-default mx-auto">
               <span class="flex h-1.5 w-1.5 md:h-2 md:w-2 relative">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-1.5 w-1.5 md:h-2 md:w-2 bg-green-500 shadow-[0_0_10px_rgba(34,197,94,0.5)]"></span>
                </span>
               <span class="text-[9px] md:text-[11px] font-bold uppercase tracking-[0.2em] text-white/90">Online Tool v2.0</span>
            </div>

            <!-- Main Title -->
            <div class="space-y-0 md:space-y-2 flex flex-col items-center w-full max-w-full px-2">
                <h1 class="font-black text-[10vw] sm:text-6xl md:text-8xl tracking-tighter uppercase text-white drop-shadow-[0_10px_30px_rgba(0,0,0,0.5)] text-center w-full leading-none">
                    Download Videos
                </h1>
                <h1 class="font-black text-[12vw] sm:text-6xl md:text-8xl tracking-tighter uppercase text-transparent bg-clip-text bg-gradient-to-r from-[#FF3366] via-[#FFC700] to-[#00E5FF] animate-gradient-x drop-shadow-[0_0_30px_rgba(242,78,30,0.3)] pb-2 max-w-full text-center w-full leading-none">
                    Online
                </h1>
            </div>
            
            <!-- Description -->
            <p class="text-white/60 text-base md:text-xl max-w-md md:max-w-2xl mx-auto leading-relaxed font-medium px-2">
                Paste links from <span class="text-white font-bold decoration-primary/50 underline decoration-2 underline-offset-4 decoration-skip-ink">YouTube, Instagram & TikTok</span>.
                <br class="hidden md:block">Download in 4K, MP3, or MP4 directly from your browser.
            </p>
        </div>

        <DownloadSection apiUrl={apiUrl} turnstileSiteKey={turnstileSiteKey} lang="en" />

        <div class="w-full max-w-[1200px] mx-auto mt-20 space-y-24 text-left">
            
            <!-- Features Grid -->
            <section class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-[#18181b] border border-white/5 p-6 rounded-2xl">
                    <div class="w-10 h-10 bg-blue-500/10 rounded-lg flex items-center justify-center mb-4 text-blue-500">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20"/><path d="m17 5-5-3-5 3"/><path d="m17 19-5 3-5-3"/></svg>
                    </div>
                    <h3 class="text-white font-bold text-lg mb-2">Ultra Fast</h3>
                    <p class="text-muted text-sm leading-relaxed">Our cloud processing software ensures maximum download speeds allowed by your connection.</p>
                </div>
                <div class="bg-[#18181b] border border-white/5 p-6 rounded-2xl">
                    <div class="w-10 h-10 bg-green-500/10 rounded-lg flex items-center justify-center mb-4 text-green-500">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 8v8"/><path d="M8 12h8"/></svg>
                    </div>
                    <h3 class="text-white font-bold text-lg mb-2">Completely Free</h3>
                    <p class="text-muted text-sm leading-relaxed">No hidden costs, no daily limits. Download as many videos as you want for free.</p>
                </div>
                <div class="bg-[#18181b] border border-white/5 p-6 rounded-2xl">
                    <div class="w-10 h-10 bg-purple-500/10 rounded-lg flex items-center justify-center mb-4 text-purple-500">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="M6 8h.01"/><path d="M10 8h.01"/><path d="M14 8h.01"/><path d="M18 8h.01"/><path d="M6 12h.01"/><path d="M10 12h.01"/><path d="M14 12h.01"/><path d="M18 12h.01"/><path d="M6 16h.01"/><path d="M10 16h.01"/><path d="M14 16h.01"/><path d="M18 16h.01"/></svg>
                    </div>
                    <h3 class="text-white font-bold text-lg mb-2">Multi-Platform</h3>
                    <p class="text-muted text-sm leading-relaxed">Support for YouTube, Instagram, TikTok, Facebook, Twitter (X) and hundreds of other websites.</p>
                </div>
            </section>

            <!-- How It Works -->
            <section class="space-y-8">
                <h2 class="text-3xl font-black text-white text-center">How to Download Videos Online?</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
                    <div class="group">
                        <div class="bg-[#27272a] rounded-full w-12 h-12 flex items-center justify-center text-white font-black mx-auto mb-4 border border-white/10 group-hover:scale-110 transition-transform">1</div>
                        <h4 class="text-white font-bold mb-2">Copy Link</h4>
                        <p class="text-muted text-sm">Go to the video you want to save and copy the URL from the address bar or share button.</p>
                    </div>
                    <div class="group">
                        <div class="bg-[#27272a] rounded-full w-12 h-12 flex items-center justify-center text-white font-black mx-auto mb-4 border border-white/10 group-hover:scale-110 transition-transform">2</div>
                        <h4 class="text-white font-bold mb-2">Paste & Search</h4>
                        <p class="text-muted text-sm">Paste the link in the field above and click "Search". Our tool will automatically detect the video.</p>
                    </div>
                    <div class="group">
                        <div class="bg-primary text-white rounded-full w-12 h-12 flex items-center justify-center font-black mx-auto mb-4 group-hover:scale-110 transition-transform shadow-[0_0_20px_rgba(37,99,235,0.3)]">3</div>
                        <h4 class="text-white font-bold mb-2">Download</h4>
                        <p class="text-muted text-sm">Choose your desired quality and click download. The file will be saved to your device.</p>
                    </div>
                </div>
            </section>

            <!-- Styled SEO Content -->
            <div class="space-y-24 w-full">
                
                <!-- Platforms Grid -->
                <div class="grid grid-cols-1 gap-12">
                    
                    <!-- YouTube Section -->
                    <div class="group relative bg-[#18181b] border border-white/5 rounded-3xl p-8 md:p-12 overflow-hidden hover:border-red-500/30 transition-colors duration-500">
                        <div class="absolute top-0 right-0 w-64 h-64 bg-red-600/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2 group-hover:bg-red-600/20 transition-all duration-500"></div>
                        <div class="relative z-10 flex flex-col md:flex-row gap-8 items-start">
                             <div class="w-16 h-16 rounded-2xl bg-red-600 text-white flex items-center justify-center shrink-0 shadow-[0_0_30px_-5px_rgba(220,38,38,0.5)]">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>
                             </div>
                             <div class="space-y-6 flex-1">
                                <h2 class="text-3xl font-black text-white">Download <span class="text-red-500">YouTube</span> Video Online</h2>
                                <p class="text-muted text-lg leading-relaxed">
                                    Download videos in <strong>Full HD 1080p, 4K</strong> and even <strong>8K</strong>. Convert clips and entire playlists to <strong>MP3</strong> with the best audio quality on the market.
                                </p>
                                <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                                    <li class="flex items-center gap-3 text-sm font-medium text-white/80 bg-white/5 px-4 py-3 rounded-xl border border-white/5">
