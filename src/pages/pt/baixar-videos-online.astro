---
import '../../styles/global.css';
import { SEO } from 'astro-seo';
import Navigation from '../../components/Navigation.astro';
import DownloadSection from '../../components/DownloadSection.astro';
import Footer from '../../components/Footer.astro';

// Metadata for SEO - Optimized for competitive keywords
const title = "Baixar Vídeo do YouTube, Instagram e TikTok Grátis | DownKingo";
const description = "Baixar vídeo do YouTube online grátis em MP4 e MP3. Baixe vídeos do Instagram, Reels, TikTok, Facebook e Twitter/X em 4K HD. Ferramenta gratuita, sem cadastro e sem instalar programas.";
const keywords = "baixar video youtube, baixar video instagram, baixar video tiktok, download youtube mp3, download video facebook, baixar reels instagram, converter youtube mp3, baixar video twitter, salvar video online, downloader de video gratis";

// Environment variables (with fallbacks)
const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '1x00000000000000000000AA'; // Cloudflare Test Key allowed for localhost
const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8080/api';
---

<!DOCTYPE html>
<html lang="pt-BR" class="scroll-smooth selection:bg-primary/30 selection:text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Console Filter: Removes third-party/extension logs -->
    <script src="/scripts/console-filter.js"></script>
    <meta name="keywords" content={keywords}>
    <SEO
      title={title}
      description={description}
      canonical="https://downkingo.com/pt/baixar-videos-online"
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "https://downkingo.com/og-image.png",
          url: "https://downkingo.com/pt/baixar-videos-online"
        }
      }}
      charset="UTF-8"
      extend={{
        meta: [
          { name: "theme-color", content: "#050505" },
          { property: "og:locale", content: "pt_BR" },
          { property: "og:site_name", content: "DownKingo" },
          { name: "robots", content: "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" }
        ],
        link: [
          { rel: "icon", type: "image/x-icon", href: "/icon.ico?v=3" }
        ]
      }}
    />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "DownKingo Online Video Downloader",
      "applicationCategory": "MultimediaApplication",
      "operatingSystem": "Any",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "description": description,
      "featureList": "Download vídeos do YouTube, Instagram, TikTok, Facebook e Twitter em alta qualidade (4K, 1080p). Converta para MP3 e MP4 gratuitamente."
    })}></script>
    
    <script type="text/partytown" defer data-domain="downkingo.com" src="https://plausible.io/js/script.js"></script>
</head>
<body class="bg-page text-swiss antialiased overflow-x-hidden relative min-h-screen flex flex-col">

    <!-- Noise Texture -->
    <div class="fixed inset-0 pointer-events-none z-[60] opacity-[0.03] mix-blend-overlay" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"></div>

    <!-- Navigation -->
    <Navigation lang="pt" currentPage="online" />

    <!-- Main Content -->
    <main class="flex-grow relative z-10 w-full pt-28 md:pt-36 pb-20 px-4 md:px-6 flex flex-col items-center overflow-x-hidden">
        
        <!-- Header -->
        <!-- Header with Enhanced Hero -->
