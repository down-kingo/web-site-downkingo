---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Picture } from 'astro:assets';

const author = "Emanuel Nunes";
const authorSlug = "emanuel-nunes";
const title = `${author} — Autor no Blog DownKingo`;
const description = `${author} é desenvolvedor de software e criador do DownKingo. Confira todos os artigos, tutoriais e guias publicados no blog.`;
const canonical = `https://downkingo.com/pt/autor/${authorSlug}/`;
const baseUrl = "https://downkingo.com";

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const authorPosts = allPosts
  .filter(p => p.data.lang === 'pt' && p.data.author === author)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const totalPosts = authorPosts.length;

const jsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  "name": author,
  "url": canonical,
  "image": `${baseUrl}/kingo.webp`,
  "jobTitle": "Software Developer",
  "sameAs": [
    "https://github.com/down-kingo",
    "https://www.linkedin.com/in/emanuel-nunes002/",
    "https://x.com/EMANUELSOARES71",
    "https://links.epixel.com.br"
  ],
  "worksFor": {
    "@type": "Organization",
    "name": "DownKingo",
    "url": baseUrl
  }
});
---

<BaseLayout
  title={title}
  description={description}
  lang="pt-BR"
  canonical={canonical}
  keywords="emanuel nunes, downkingo, autor, desenvolvedor, software"
  alternateUrls={{ en: `/en/author/${authorSlug}/`, pt: `/pt/autor/${authorSlug}/` }}
  currentPage="blog"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={jsonLd} />
  </Fragment>

  <div class="author-page">
    <!-- Author Hero -->
    <section class="author-hero">
      <div class="author-hero-inner">
        <div class="author-avatar-large">
          <span>E</span>
        </div>

        <h1 class="author-name">{author}</h1>
        <p class="author-role">Desenvolvedor de Software & Criador do DownKingo</p>

        <p class="author-bio">
          Desenvolvedor apaixonado por criar ferramentas que respeitam a privacidade do usuário.
          Criador do <a href="/pt/">DownKingo</a>, um kit de ferramentas de mídia open source construído
          com Go, Wails v3 e React 19. Acredita que software bom deve ser gratuito, transparente e sem rastreamento.
        </p>

        <!-- Social Links -->
        <div class="author-socials">
          <a href="https://github.com/down-kingo" target="_blank" rel="noopener noreferrer" class="author-social-link" aria-label="GitHub">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            <span>GitHub</span>
          </a>
          <a href="https://www.linkedin.com/in/emanuel-nunes002/" target="_blank" rel="noopener noreferrer" class="author-social-link" aria-label="LinkedIn">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            <span>LinkedIn</span>
          </a>
          <a href="https://x.com/EMANUELSOARES71" target="_blank" rel="noopener noreferrer" class="author-social-link" aria-label="X (Twitter)">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            <span>X / Twitter</span>
          </a>
          <a href="https://links.epixel.com.br" target="_blank" rel="noopener noreferrer" class="author-social-link" aria-label="Links">
            <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
            <span>Todos os Links</span>
          </a>
        </div>

        <div class="author-stats">
          <span class="author-stat">{totalPosts} {totalPosts === 1 ? 'artigo publicado' : 'artigos publicados'}</span>
        </div>
      </div>
    </section>

    <!-- Articles -->
    <section class="author-articles">
      <div class="author-articles-inner">
        <h2 class="author-articles-heading">Artigos</h2>

        <div class="author-articles-grid">
          {authorPosts.map((post) => {
            const slug = post.id.replace(/^pt\//, '').replace(/\.md$/, '');
            const formattedDate = post.data.pubDate.toLocaleDateString('pt-BR', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            });
            const wordCount = post.body ? post.body.split(/\s+/).length : 0;
            const readingTime = Math.max(1, Math.ceil(wordCount / 200));

            return (
              <a href={`/pt/blog/${slug}`} class="author-article-card">
                {post.data.heroImage && (
                  <div class="author-article-image">
                    <Picture
                      src={post.data.heroImage}
                      formats={['avif', 'webp']}
                      alt={post.data.heroImageAlt || post.data.title}
                      width={600}
                      height={338}
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="author-article-body">
                  <span class="author-article-category">{post.data.category}</span>
                  <h3 class="author-article-title">{post.data.title}</h3>
                  <p class="author-article-desc">{post.data.description}</p>
                  <span class="author-article-meta">{formattedDate} · {readingTime} min de leitura</span>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .author-page {
    padding-top: 140px;
    padding-bottom: 80px;
    font-family: 'Inter', system-ui, sans-serif;
  }

  /* ── Hero ─────────────────────────── */
  .author-hero {
    max-width: 720px;
    margin: 0 auto 60px;
    padding: 0 24px;
    text-align: center;
  }

  .author-hero-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .author-avatar-large {
    width: 96px;
    height: 96px;
    border-radius: 50%;
    background: linear-gradient(135deg, #1a1d23, #252831);
    border: 3px solid rgba(255, 255, 255, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
  }

  .author-avatar-large span {
    font-size: 36px;
    font-weight: 900;
    color: #f7f9f9;
  }

  .author-name {
    font-size: 42px;
    font-weight: 900;
    color: #f7f9f9;
    margin: 0 0 8px;
    line-height: 1.1;
  }

  .author-role {
    font-size: 16px;
    font-weight: 500;
    color: rgba(247, 249, 249, 0.5);
    margin: 0 0 24px;
    font-family: 'JetBrains Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 11px;
  }

  .author-bio {
    font-size: 17px;
    line-height: 1.7;
    color: rgba(247, 249, 249, 0.7);
    max-width: 540px;
    margin: 0 0 32px;
  }

  .author-bio a {
    color: #f7f9f9;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }

  .author-bio a:hover {
    color: #f24e1e;
  }

  /* ── Socials ─────────────────────── */
  .author-socials {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    justify-content: center;
    margin-bottom: 24px;
  }

  .author-social-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    border-radius: 100px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: rgba(247, 249, 249, 0.7);
    font-size: 13px;
    font-weight: 600;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .author-social-link:hover {
    background: rgba(255, 255, 255, 0.08);
    color: #f7f9f9;
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
  }

  /* ── Stats ────────────────────────── */
  .author-stats {
    display: flex;
    gap: 16px;
  }

  .author-stat {
    font-family: 'JetBrains Mono', monospace;
    font-size: 12px;
    color: rgba(247, 249, 249, 0.4);
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* ── Articles ────────────────────── */
  .author-articles {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .author-articles-heading {
    font-size: 13px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: rgba(247, 249, 249, 0.35);
    margin: 0 0 32px;
    font-family: 'JetBrains Mono', monospace;
  }

  .author-articles-grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .author-article-card {
    display: flex;
    gap: 20px;
    padding: 20px;
    border-radius: 18px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.25s ease;
    text-decoration: none;
    color: inherit;
  }

  .author-article-card:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .author-article-image {
    flex: 0 0 200px;
    height: 130px;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
  }

  .author-article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .author-article-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-width: 0;
  }

  .author-article-category {
    font-family: 'JetBrains Mono', monospace;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(247, 249, 249, 0.35);
    margin-bottom: 6px;
  }

  .author-article-title {
    font-size: 20px;
    font-weight: 900;
    color: #f7f9f9;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .author-article-desc {
    font-size: 14px;
    line-height: 1.5;
    color: rgba(247, 249, 249, 0.5);
    margin: 0 0 8px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .author-article-meta {
    font-family: 'JetBrains Mono', monospace;
    font-size: 11px;
    color: rgba(247, 249, 249, 0.3);
  }

  /* ── Responsive ──────────────────── */
  @media (max-width: 768px) {
    .author-page { padding-top: 110px; }
    .author-name { font-size: 32px; }
    .author-article-card { flex-direction: column; }
    .author-article-image { flex-basis: auto; height: 180px; }
  }

  @media (max-width: 480px) {
    .author-name { font-size: 28px; }
    .author-socials { flex-direction: column; align-items: center; }
    .author-article-title { font-size: 17px; }
  }
</style>
