---
import '../styles/global.css';
import { Image } from 'astro:assets';
import wailsIcon from '../assets/wails-icon.ico';

// Metadata for SEO
const title = "Download DownKingo - Universal Media Toolbox";
const description = "Download DownKingo for Windows, macOS, and Linux. The privacy-focused media downloader powered by Go & Wails.";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth selection:bg-primary/30 selection:text-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="theme-color" content="#050505">
    <link rel="icon" type="image/x-icon" href="/icon.ico?v=2">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;900&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <script src="https://code.iconify.design/3/3.1.0/iconify.min.js"></script>
</head>
<body class="bg-page text-swiss antialiased overflow-x-hidden relative min-h-screen flex flex-col">

    <!-- Noise Texture -->
    <div class="fixed inset-0 pointer-events-none z-[60] opacity-[0.03] mix-blend-overlay" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"></div>

    <!-- Navigation -->
    <nav class="fixed top-6 left-1/2 -translate-x-1/2 z-[100] w-full max-w-sm md:max-w-2xl px-4">
        <div class="glass rounded-full px-6 py-3 flex items-center justify-between border border-white/5 bg-black/50 backdrop-blur-xl">
            <a href="/" class="font-black text-lg tracking-tighter uppercase flex items-center gap-2 group">
                <span class="w-3 h-3 bg-primary rounded-full group-hover:scale-125 transition-transform duration-300"></span>
                DownKingo
            </a>
            
            <div class="hidden md:flex gap-8 font-mono text-xs font-medium text-muted">
                <a href="/" class="hover:text-white transition-colors">HOME</a>
                <a href="/download" class="text-white">DOWNLOAD</a>
                <a href="/#build-in-public" class="hover:text-white transition-colors">ROADMAP</a>
                <a href="https://github.com/down-kingo/downkingo" target="_blank" class="flex items-center gap-1 hover:text-white transition-colors">
                    GITHUB <span class="iconify" data-icon="lucide:external-link" data-width="12"></span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow relative z-10 w-full pt-32 pb-20 px-6">
        
        <!-- Header -->
        <div class="max-w-4xl mx-auto text-center space-y-6 mb-20">
            <h1 class="font-black text-5xl md:text-7xl tracking-tighter uppercase text-white drop-shadow-2xl">
                Get <span class="text-transparent bg-clip-text bg-gradient-to-b from-white to-white/40">DownKingo.</span>
            </h1>
            <p class="text-muted text-lg max-w-xl mx-auto leading-relaxed">
                Choose your platform. Free, Open Source, and Privacy-Focused.
                <br>Latest Version: <span class="font-mono text-primary">v2.0.0</span>
            </p>
        </div>

        <!-- Download Cards Grid -->
        <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <!-- Windows -->
            <div class="group relative bg-[#09090b] border border-white/10 rounded-2xl p-8 hover:border-primary/50 transition-all duration-300 hover:-translate-y-1">
                <div class="absolute inset-x-0 h-px top-0 bg-gradient-to-r from-transparent via-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                
                <div class="h-12 w-12 bg-blue-500/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-blue-500/20 transition-colors">
                    <span class="iconify text-blue-400" data-icon="simple-icons:windows" data-width="24"></span>
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-2">Windows</h3>
                <p class="text-sm text-muted font-mono mb-6">Windows 10/11 (64-bit)</p>
                
                <a href="#" class="block w-full py-4 rounded-lg bg-white text-black font-black text-center uppercase tracking-widest text-xs hover:bg-gray-200 transition-colors">
                    Download .exe
                </a>
                <div class="mt-4 flex justify-center gap-4 text-[10px] text-muted font-mono">
                    <span class="hover:text-white cursor-pointer">Portable</span>
                    <span>•</span>
                    <span class="hover:text-white cursor-pointer">Installer</span>
                </div>
            </div>

            <!-- Linux -->
            <div class="group relative bg-[#09090b] border border-white/10 rounded-2xl p-8 hover:border-primary/50 transition-all duration-300 hover:-translate-y-1">
                 <div class="absolute inset-x-0 h-px top-0 bg-gradient-to-r from-transparent via-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

                <div class="h-12 w-12 bg-orange-500/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-orange-500/20 transition-colors">
                    <span class="iconify text-orange-400" data-icon="simple-icons:linux" data-width="24"></span>
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-2">Linux</h3>
                <p class="text-sm text-muted font-mono mb-6">Ubuntu, Debian, Fedora</p>
                
                <a href="#" class="block w-full py-4 rounded-lg bg-white/5 border border-white/10 text-white font-black text-center uppercase tracking-widest text-xs hover:bg-white hover:text-black transition-all">
                    Download .deb
                </a>
                <div class="mt-4 flex justify-center gap-4 text-[10px] text-muted font-mono">
                    <span class="hover:text-white cursor-pointer">.rpm</span>
                    <span>•</span>
                    <span class="hover:text-white cursor-pointer">AppImage</span>
                </div>
            </div>

            <!-- macOS -->
            <div class="group relative bg-[#09090b] border border-white/10 rounded-2xl p-8 hover:border-yellow-500/30 transition-all duration-300 hover:-translate-y-1">
                 <div class="absolute inset-x-0 h-px top-0 bg-gradient-to-r from-transparent via-yellow-500/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

                <div class="h-12 w-12 bg-white/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-white/20 transition-colors">
                    <span class="iconify text-white" data-icon="simple-icons:apple" data-width="24"></span>
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-2">macOS <span class="text-xs font-mono text-yellow-500 border border-yellow-500/20 bg-yellow-500/5 px-2 py-1 rounded ml-2 align-middle">LEGACY</span></h3>
                <p class="text-xs text-muted font-mono mb-6 leading-relaxed">
                    v1.1.0 "Kinematic"<br>
                    <span class="text-white/40 italic">v2.0 not yet available for Mac</span>
                </p>
                
                <a href="/Kinematic.dmg" class="block w-full py-4 rounded-lg bg-white/5 border border-white/10 text-white font-black text-center uppercase tracking-widest text-xs hover:bg-white hover:text-black transition-all">
                    Download v1.1.0
                </a>
                <div class="mt-4 flex justify-center gap-4 text-[10px] text-muted font-mono">
                    <span class="hover:text-white cursor-pointer" title="Supports Intel Macs">Intel</span>
                    <span>•</span>
                    <span class="hover:text-white cursor-pointer" title="Requires Rosetta 2">Apple Silicon</span>
                </div>
            </div>

        </div>

    </main>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-white/5 bg-black mt-auto">
            <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-end justify-between gap-6">
                <div>
                <span class="font-black text-2xl text-white tracking-tighter uppercase block">DownKingo<span class="text-primary">.</span></span>
                <span class="font-mono text-[10px] text-muted uppercase mt-2 block">Feat. Wails v2 + React</span>
                </div>
                
                <div class="flex flex-col md:items-end gap-2">
                    <p class="font-mono text-[10px] text-muted uppercase">© 2026 - MIT Open Source License</p>
                    <div class="flex gap-4 mt-2">
                    <a href="https://github.com/down-kingo/downkingo" target="_blank" aria-label="GitHub" class="text-muted hover:text-white transition-colors"><span class="iconify" data-icon="simple-icons:github"></span></a>
                    <a href="https://twitter.com/downkingo" target="_blank" aria-label="Twitter" class="text-muted hover:text-white transition-colors"><span class="iconify" data-icon="simple-icons:x"></span></a>
                    </div>
                </div>
            </div>
    </footer>

</body>
</html>
