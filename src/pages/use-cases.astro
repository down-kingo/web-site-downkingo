---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "All Use Cases - DownKingo";
const description = "Explore all DownKingo use cases. YouTube, Instagram, TikTok, Twitter, Facebook and 8 more platforms. Free and Open Source.";
const keywords = "use cases, video downloader, youtube downloader, instagram downloader, tiktok downloader, all use cases";
const canonical = "https://downkingo.com/use-cases/";

const og = {
    basic: {
        title: "All Use Cases - DownKingo",
        type: "website",
        image: "https://downkingo.com/og-image.png",
        url: canonical
    }
};
---

<BaseLayout title={title} description={description} lang="en" canonical={canonical} opengraph={og} keywords={keywords} alternateUrls={{ en: "/use-cases/", pt: "/pt/casos-de-uso/" }} currentPage="tools">

    <!-- Hero Section -->
    <section class="relative pt-32 pb-16 px-6 overflow-hidden">
        <div class="absolute inset-0 bg-grid-premium opacity-20 pointer-events-none"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/20 blur-[120px] rounded-full opacity-20 pointer-events-none mix-blend-screen"></div>

        <div class="relative z-10 text-center max-w-4xl mx-auto space-y-6">
            <div class="inline-flex items-center gap-3 border border-primary/20 rounded-full pl-2 pr-4 py-1 bg-primary/5 backdrop-blur-md hover:border-primary/40 transition-colors mx-auto">
                <Icon name="lucide:layout-grid" class="text-primary" width={16} />
                <span class="font-mono text-[10px] tracking-widest text-primary uppercase">12 Supported Platforms</span>
            </div>

            <h1 class="font-black text-5xl md:text-8xl tracking-tighter uppercase leading-[0.9] select-none text-white drop-shadow-2xl">
                All {' '}<br />{' '} <span class="text-transparent bg-clip-text bg-gradient-to-b from-primary to-red-900">Use Cases.</span>
            </h1>

            <p class="text-muted text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
                Download videos and music from any platform. YouTube, Instagram, TikTok, Twitter and much more. All free and open source.
            </p>
        </div>
    </section>

    <!-- Tools Grid -->
    <section class="py-16 px-6 max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- YouTube -->
            <a href="/youtube-downloader/" class="group p-6 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-all hover:-translate-y-1">
                <div class="flex items-center gap-4 mb-4">
                    <div class="p-3 bg-red-500/10 rounded-lg text-red-500">
                        <Icon name="simple-icons:youtube" width={28} />
                    </div>
                    <h2 class="text-lg font-bold text-white uppercase">YouTube Downloader</h2>
                </div>
                <p class="text-xs text-muted font-mono leading-relaxed">Download videos, playlists and channels from YouTube in 4K/8K</p>
                <div class="mt-4 flex items-center gap-2 text-xs text-primary font-mono uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">
                    Open <Icon name="lucide:arrow-right" width={12} />
                </div>
            </a>

            <!-- Instagram -->
            <a href="/instagram-downloader/" class="group p-6 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-all hover:-translate-y-1">
