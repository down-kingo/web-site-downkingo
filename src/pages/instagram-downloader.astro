---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import appInterface from '../assets/build-in-public-kingo.avif';

// SEO Configuration
const title = "Download Instagram Reels & Stories (4K) - DownKingo";
const description = "Download Instagram Videos, Reels, Stories and Photos in high quality. Free tool to download Instagram content anonymously without watermark.";
const keywords = "download instagram reels, download instagram stories, download instagram photos, instagram video download, save stories anonymous, instagram mp4";

const canonical = "https://downkingo.com/instagram-downloader/";
const og = {
    basic: {
        title: "Download Instagram Reels & Stories - DownKingo",
        type: "website",
        image: "https://downkingo.com/og-image.png",
        url: canonical
    }
};
---

<BaseLayout title={title} description={description} lang="en" canonical={canonical} opengraph={og} keywords={keywords}>

    <!-- Hero Section -->
    <section class="relative min-h-[80vh] flex flex-col items-center justify-center pt-24 px-6 overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 bg-grid-premium opacity-20 pointer-events-none"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-tr from-purple-500/20 to-pink-500/20 blur-[120px] rounded-full opacity-20 pointer-events-none mix-blend-screen animate-pulse duration-[5000ms]"></div>

        <div class="relative z-10 text-center max-w-5xl mx-auto space-y-10">
             <!-- Eyebrow -->
             <div class="inline-flex items-center gap-3 border border-pink-500/20 rounded-full pl-2 pr-4 py-1 bg-pink-500/5 backdrop-blur-md hover:border-pink-500/40 transition-colors mx-auto">
                <Icon name="simple-icons:instagram" class="text-pink-500" width={16} />
                <span class="font-mono text-[10px] tracking-widest text-pink-200 uppercase">Instagram Downloader Pro</span>
            </div>

            <!-- Main Title (H1 SEO Optimized) -->
            <h1 class="font-black text-5xl md:text-8xl tracking-tighter uppercase leading-[0.9] select-none text-white drop-shadow-2xl text-center mx-auto max-w-full">
                Download Reels <br><span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500">& Stories.</span>
            </h1>

            <p class="text-muted text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
                The easiest way to save Reels, Stories, Photos and Videos from Instagram in high definition. Download complete carousel albums with one click.
            </p>

            <!-- Actions -->
            <div class="flex flex-col md:flex-row items-center justify-center gap-6 pt-8">
                 <a id="hero-download-btn" href="/download/" class="h-14 px-10 bg-white text-black font-black text-sm uppercase tracking-widest hover:bg-gray-200 transition-all rounded-full flex items-center gap-3 hover:scale-105 active:scale-95 shadow-[0_0_20px_rgba(255,255,255,0.3)]">
                         <span id="hero-download-text">Download Free</span>
                         <Icon id="hero-download-icon" name="lucide:arrow-down" width={20} />
                 </a>
            </div>
        </div>
    </section>

    <!-- Features Section SPECIFIC TO INSTAGRAM -->
    <section id="features" class="py-24 px-6 max-w-7xl mx-auto border-y border-white/5 bg-black/20">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="p-8 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-colors group">
                <div class="mb-6 p-3 bg-pink-500/10 w-fit rounded-lg text-pink-500 group-hover:scale-110 transition-transform">
                    <Icon name="lucide:video" width={32} />
                </div>
                <h2 class="text-lg font-bold text-white mb-2 uppercase">Full HD Reels</h2>
                <p class="text-xs text-muted leading-relaxed font-mono">
                    Download viral Reels to share on TikTok or WhatsApp without losing quality. The file comes clean, in MP4 format.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="p-8 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-colors group">
                <div class="mb-6 p-3 bg-purple-500/10 w-fit rounded-lg text-purple-500 group-hover:scale-110 transition-transform">
                    <Icon name="lucide:images" width={32} />
                </div>
                <h2 class="text-lg font-bold text-white mb-2 uppercase">Complete Carousel</h2>
                <p class="text-xs text-muted leading-relaxed font-mono">
                    No need to download photo by photo. Copy the link of a multi-image post (carousel) and DownKingo downloads them all at once in high resolution.
                </p>
            </div>

             <!-- Feature 3 -->
             <div class="p-8 border border-white/10 bg-white/[0.02] rounded-2xl hover:bg-white/[0.04] transition-colors group">
                <div class="mb-6 p-3 bg-orange-500/10 w-fit rounded-lg text-orange-500 group-hover:scale-110 transition-transform">
                    <Icon name="lucide:shield-check" width={32} />
                </div>
                <h2 class="text-lg font-bold text-white mb-2 uppercase">Total Privacy</h2>
                <p class="text-xs text-muted leading-relaxed font-mono">
                    When downloading Stories or Highlights through DownKingo, no one will know that you viewed or saved the content.
                </p>
            </div>
        </div>
    </section>

    <!-- Visual Demo Section -->
    <section class="py-32 px-6 max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">

            <!-- Image Container -->
            <div class="relative group perspective-container order-2 lg:order-1">
                 <div class="absolute -inset-1 bg-gradient-to-r from-purple-600/20 to-pink-500/20 rounded-xl blur-xl opacity-50 group-hover:opacity-100 transition-opacity duration-700"></div>
                 <div class="relative rounded-xl overflow-hidden border border-white/10 shadow-2xl bg-[#050505] rotate-3d-reverse hover:transition-transform duration-500">
                      <Image src={appInterface} format="webp" alt="Download Instagram Reels Interface" class="w-full h-auto object-cover opacity-90 group-hover:opacity-100 transition-opacity" />
                 </div>
            </div>

            <div class="space-y-8 order-1 lg:order-2">
                <span class="inline-block mb-4 font-mono text-xs text-pink-500 uppercase tracking-widest border border-pink-500/20 bg-pink-500/5 px-2 py-1 rounded">Insta Saver 2025</span>
                <h2 class="text-4xl md:text-6xl font-black uppercase tracking-tight text-white">Save Everything<br>From Instagram.</h2>
                <p class="text-muted text-lg leading-relaxed">
                    Online tools require sketchy logins or endless captchas. DownKingo is the ultimate Instagram downloader for Desktop. Fast, secure and free.
                </p>
                <ul class="space-y-4 pt-4">
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                        <Icon name="lucide:check" class="text-green-500" width={18} /> Download Stories expiring in 24h
                    </li>
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                        <Icon name="lucide:check" class="text-green-500" width={18} /> Save IGTV videos
                    </li>
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                        <Icon name="lucide:check" class="text-green-500" width={18} /> Photos in original maximum quality
                    </li>
                </ul>
            </div>

        </div>
    </section>

    <!-- FAQ Section -->
    <section id="faq" class="py-24 px-6 max-w-4xl mx-auto border-t border-white/5">
        <h2 class="text-2xl font-black uppercase text-white mb-12 text-center tracking-widest">Instagram Downloader FAQ</h2>
        <div class="space-y-4">
            <details class="group bg-white/[0.02] border border-white/5 rounded-none open:bg-white/[0.04] transition-colors">
                <summary class="flex items-center justify-between p-6 cursor-pointer list-none font-bold text-white text-sm uppercase tracking-wide">
                    How to save Instagram Stories?
                    <Icon name="lucide:chevron-down" class="group-open:rotate-180 transition-transform text-white/50" width={16} />
                </summary>
                <div class="px-6 pb-6 text-muted font-mono text-xs leading-relaxed border-t border-white/5 pt-4">
                    Copy the Story link (tap the 3 dots -> Copy Link) and paste it into DownKingo. It's that simple.
                </div>
            </details>

            <details class="group bg-white/[0.02] border border-white/5 rounded-none open:bg-white/[0.04] transition-colors">
                 <summary class="flex items-center justify-between p-6 cursor-pointer list-none font-bold text-white text-sm uppercase tracking-wide">
                    Can I download Reels with original music?
                    <Icon name="lucide:chevron-down" class="group-open:rotate-180 transition-transform text-white/50" width={16} />
                </summary>
                <div class="px-6 pb-6 text-muted font-mono text-xs leading-relaxed border-t border-white/5 pt-4">
                    Yes! DownKingo downloads the original video file with synchronized audio. The sound quality is fully preserved.
                </div>
            </details>

             <details class="group bg-white/[0.02] border border-white/5 rounded-none open:bg-white/[0.04] transition-colors">
                 <summary class="flex items-center justify-between p-6 cursor-pointer list-none font-bold text-white text-sm uppercase tracking-wide">
                    Is it anonymous? Does the user know I downloaded?
                    <Icon name="lucide:chevron-down" class="group-open:rotate-180 transition-transform text-white/50" width={16} />
                </summary>
                <div class="px-6 pb-6 text-muted font-mono text-xs leading-relaxed border-t border-white/5 pt-4">
                    Instagram does not notify when you download photos or videos from public posts. The download happens anonymously and securely.
                </div>
            </details>
        </div>
    </section>

</BaseLayout>
